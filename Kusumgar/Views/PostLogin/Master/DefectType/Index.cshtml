@model Kusumgar.Models.DefectTypeViewModel


<script src="~/Scripts/Master/Event/defect_type_event.js"></script>
<script src="~/Scripts/Master/Method/defect_type_method.js"></script>
<script src="~/Scripts/Master/Validation/defect_type_validation.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

<!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Defect - Type
           <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Defect - Type</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-primary">
                    <!-- form start -->
                    
                    <form id="frmDefectType" method="post">

                      <div class="box-body">

                            <div class="row">
                                <div class="col-md-4">

                                  <div class="form-group">

                                        <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                        <input type="hidden" id="hdfDefectTypeId" name="DefectType.DefectTypeEntity.Defect_Type_Id" value="@Model.DefectType.DefectTypeEntity.Defect_Type_Id" />
                                        
                                      <label for="txtDefectTypeName" style="color: #333">Defect - Type </label>
                                      <input type="text" class="form-control input-sm" id="txtDefectTypeName" name="DefectType.DefectTypeEntity.Defect_Type_Name" value="@Model.DefectType.DefectTypeEntity.Defect_Type_Name" placeholder="Enter defect - type">
                                    </div>

                                    <div class="form-group">
                                        @if (Model.DefectType.DefectTypeEntity.Status == true)
                                        {

                                            <input type="checkbox" id="chkIsActive" name="chkIsActive" value="false" checked />
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="chkIsActive" name="chkIsActive" value="true" />
                                        }
                                        &nbsp;&nbsp;&nbsp;&nbsp; Approved Status

                                    </div>
                                    <input type="hidden" id="hdnActive" name="DefectType.DefectTypeEntity.Status" value="@Model.DefectType.DefectTypeEntity.Status.ToString()">

                            </div>
                        </div>

                          <div class="box-footer">
                              <div class="btn-group">
                                  <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                  <a href="@Url.Action("Search","DefectType")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle</a>

                              </div>
                          </div>

                     </div>
                    <!-- /.box-body -->

                </form>
      
                </div>
          
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

