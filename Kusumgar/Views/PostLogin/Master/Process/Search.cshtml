@{
    ViewBag.Title = "Customer";
}

<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent!important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Process
           
            <small>Search</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Process Search</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Customer Search -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- form start -->
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label for="txtProcessName">Process name</label>
                                    <input type="text" class="form-control" id="txtProcessName" placeholder="Enter process name">
                                </div>

                            </div>

                        </div>

                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-6">
                                
                                    <div class="btn-group pull-left">
                                        <button type="submit" id="btnSearch" class="btn btn-success">Search</button>
                                        <a class="btn btn-primary" href="@Url.Action("Index","Process")" role="button">Create Process</a>
                                    </div>

                                </div>
                                <div class="col-md-6">

                                <div class="btn-group pull-right">
                                    
                                    <button type="button" class="btn btn-warning">Edit Process</button>
                                    <button type="button" class="btn btn-primary">View Process Route Codes</button>

                                </div>

                            </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <!-- Customer Search Ends -->

        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped">
                            <tr>
                                <th style="width:50px;"></th>
                                <th>Process name</th>
                                <th style="width:100px;">Status</th>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" checked /></td>
                                <td>Desize</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>Scour (In Jigger)</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>Drying</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>Sour (In Jet)</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>Finishing</td>
                                <td>Active</td>
                            </tr>
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
          

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col (left) -->
        </div>

       
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>
