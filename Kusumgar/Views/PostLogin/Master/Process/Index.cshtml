@model Kusumgar.Models.ProcessViewModel
@using KusumgarBusinessEntities.Common

<script src="/Scripts/Master/Event/process_event.js"></script>
<script src="/Scripts/Master/Method/process_method.js"></script>
<script src="/Scripts/Master/Validation/process_validation.js"></script>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Process

            <small>Master</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Masters</li>
            <li class="active">Process</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Process Information</h3>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <form id="frmProcess">
                            <div class="row">
                                <div class="col-md-4">

                                    <input type="hidden" id="hdnProcess_Id" name="Process.Process_Id" value="@Model.Process.Process_Id">

                                    <div class="form-group">
                                        <label for="txtProcessName" style="color: #333">Process Name</label>
                                        <input type="text" class="form-control input-sm" name="Process.Process_Name" id="txtProcessName" placeholder="Enter Process Name" value="@Model.Process.Process_Name">
                                    </div> 
                                    <div class="form-group">
                                        <label for="drpArticle_Types" style="color: #333">Article Types</label>
                                        <select id="drpArticle_Types" class="form-control input-sm" name="Process.Article_Type">
                                            <option value="">Select Article_Types</option>
                                            @foreach (var item in LookupInfo.Get_Article_Types())
                                            {
                                                if (Model.Process.Article_Type == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                                                       
                                    <div class="form-group">
                                        <label>
                                            @if (Model.Process.Is_Active == true)
                                            {
                                                <input type="checkbox" name="chkIsActive" id="chkIsActive" value="false" checked />
                                            }
                                            else
                                            {
                                                <input type="checkbox" name="chkIsActive" id="chkIsActive" value="true" />
                                            }
                                            &nbsp;&nbsp;&nbsp;&nbsp; Is Active
                                            <input type="hidden" class="form-control input-sm" id="hdnIs_Active" name="Process.Is_Active" value="@Model.Process.Is_Active.ToString()">
                                        </label>
                                    </div>
                                </div>                                
                            </div>
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="btn-group">
                                            <button type="button" id="btnProcessSave" class="btn btn-success btn-sm">Save </button>
                                            <a href="@Url.Action("Search", "Process")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>            
            </div><!-- /.col -->
        </div><!-- /.row -->        
    </section>
</div>
<!-- /.content-wrapper -->
