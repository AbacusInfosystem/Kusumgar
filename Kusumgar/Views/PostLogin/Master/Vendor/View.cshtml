@model Kusumgar.Models.VendorViewModel
@using KusumgarBusinessEntities.Common

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <section class="content">
        <div class="row ">
            <div class="col-md-12 ">
                <div class="btn-group pull-right">
                    @*<button class="btn-primary btn-sm btn-success" type="button" value="Printable View" id="btnPrintable_View">Printable View</button>*@
                    <button class="btn-primary btn-sm btn-success hidden-print " type="button" value="Print" id="btnPrint" onclick="window.print()"><span class="fa fa-print"></span></button>
                </div>
            </div>
        </div>
        @{Html.RenderPartial("_PrintableView", Model);}
    </section>

</div>
<!-- /.content-wrapper -->
<script>
    $(function () {

        $("#btnPrintable_View").click(function () {

            $("#frmPrintable_Vendor").attr("target", "_blank");     //for open page on new browser tab

            $("#frmPrintable_Vendor").attr("action", "/system/printable-view/Vendor/" + $("#hdfVendor_Id").val());

            $("#frmPrintable_Vendor").attr("method", "POST");

            $("#frmPrintable_Vendor").submit();

        });
    });
</script>