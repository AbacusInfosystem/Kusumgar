@model Kusumgar.Models.VendorViewModel





<form id="frmVendor">

    <div class="row">
        <div class="col-md-4">

            <input type="hidden" id="hdnVendorId" name="Vendor.Vendor_Id" value="@Model.Vendor.Vendor_Id">
            <input type="hidden" id="hdnIs_Primary" value="@Model.Is_Primary">
            <div class="form-group">
                <label for="txtVendorName" style="color: #333">Vendor Name :</label>
                <input type="text" id="txtVendorName" class="form-control input-sm" name="Vendor.Vendor_Name" value="@Model.Vendor.Vendor_Name" placeholder="Enter Vendor Name">
                <input type="hidden" class="form-control input-sm" id="hdnVendorName" value="@Model.Vendor.Vendor_Name">
            </div>

            <div class="form-group">
                <label style="color: #333">Product-Category</label>
                <select class="form-control input-sm" id="drpProductCategory" name="Vendor.Product_Category">
                    <option value="">Select Product-Category</option>
                    @foreach (var item in Model.Material_Category)
                    {
                        if (Model.Vendor.Product_Category == item.Material_Category_Id)
                        {
                            <option value="@item.Material_Category_Id" selected="selected">@item.Material_Category_Name</option>
                        }
                        else
                        {
                            <option value="@item.Material_Category_Id">@item.Material_Category_Name</option>
                        }
                    }
                </select>

            </div>

            <div class="form-group">
                <label for="txtYarnCode" style="color: #333"> Code</label>
                <input type="text" class="form-control" id="txtYarnCode" name="Vendor.Code" value="@Model.Vendor.Code" placeholder="Enter Yarn Code">
            </div>

            <div class="form-group">
                <label for="txtEmailId" style="color: #333">Email Id</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="text" class="form-control input-sm" id="txtEmailId" name="Vendor.Email" value="@Model.Vendor.Email" placeholder="Enter email">
                </div>
            </div>

        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="form-group">
                    <label for="txtHeadOfficeAddress" style="color: #333">Head Office Address :</label>
                    <textarea id="txtHeadOfficeAddress" class="form-control input-sm" name="Vendor.HeadOfficeAddress" placeholder="Enter Head Office Address">@Model.Vendor.HeadOfficeAddress</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="drpHeadOfficeNation" style="color: #333">Head Office Nation : </label>
                <select id="drpHeadOfficeNation" class="form-control input-sm" name="Vendor.Head_Office_Nation">
                    <option value="">- Select Nation -</option>
                    @foreach (var item in Model.Nations)
                    {
                        if (Model.Vendor.Head_Office_Nation == item.NationId)
                        {
                            <option value="@item.NationId" selected="selected">@item.NationName</option>
                        }
                        else
                        {
                            <option value="@item.NationId">@item.NationName</option>
                        }
                    }
                </select>
            </div>


            <div class="form-group">
                <label for="drpHeadOfficeState" style="color: #333">Head Office State : </label>
                <select id="drpHeadOfficeState" class="form-control input-sm" name="Vendor.Head_Office_State">
                    <option value="">- Select State-</option>
                    @foreach (var item in Model.States)
                    {
                        if (Model.Vendor.Head_Office_State == item.StateId)
                        {
                            <option value="@item.StateId" selected="selected">@item.StateName</option>
                        }
                        else
                        {
                            <option value="@item.StateId">@item.StateName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="txtHeadOfficeZipCode" style="color: #333">Zipcode</label>

                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-crosshairs"></i></span>
                    <input type="text" class="form-control input-sm" id="txtHeadOfficeZipCode" name="Vendor.Head_Office_ZipCode" value="@Model.Vendor.Head_Office_ZipCode" placeholder="Enter zipcode" maxlength="6">
                </div>
            </div>


        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label style="color: #333">Landline 1:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <input type="text" id="txtHeadOfficeLandline1" class="form-control input-sm" name="Vendor.Head_Office_Landline1" data-inputmask='"mask": "(999) 999-9999"' data-mask" value="@Model.Vendor.Head_Office_Landline1" />
                </div>
                <!-- /.input group -->
            </div>
            <div class="form-group">
                <label style="color: #333">Landline 2:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <input type="text" id="txtHeadOfficeLandline2" class="form-control input-sm" name="Vendor.Head_Office_Landline2" data-inputmask='"mask": "(999) 999-9999"' data-mask" value="@Model.Vendor.Head_Office_Landline2" />
                </div>
                <!-- /.input group -->
            </div>

            <div class="form-group">
                <label style="color: #333">Fax no:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-fax"></i>
                    </div>
                    <input type="text" id="txtHeadOfficeFaxNo" class="form-control" name="Vendor.Head_Office_FaxNo" data-inputmask='"mask": "(999) 999-9999"' data-mask" value="@Model.Vendor.Head_Office_FaxNo" />
                </div>
                <!-- /.input group -->
            </div>


            <div class="form-group">
                <label for="chkStatus">Status :</label><br>
                @if (Model.Vendor.Is_Active)
                    {
            @:<input type="checkbox" class="iCheck" name="Vendor.Is_Active" value="false" checked />
                                                }
                    else
                    {
            @:<input type="checkbox" class="iCheck" name="Vendor.Is_Active" value="true" />
                                                }

                Active &nbsp;&nbsp;&nbsp;
                <input type="hidden" class="iCheck-hidden" id="hdnStatus" value="@((Model.Vendor.Is_Active == null ? false : Model.Vendor.Is_Active).ToString())">


            </div>
        </div>


    </div>

    <div class="box-footer">
        <div class="btn-group">
            <button type="button" id="btnSave" class="btn btn-success btn-sm">Save Primary</button>
            <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle </a>
        </div>
    </div>
</form>

<script src="~/Scripts/Master/Method/vendor_partial_method.js"></script>
<script src="~/Scripts/Master/Event/vendor_partial_event.js"></script>
<script src="~/Scripts/Master/Validation/vendor_partial_validation.js"></script>
