
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

<script src="~/Scripts/Master/Event/vendor_listing_event.js"></script>
<script src="~/Scripts/Master/Method/vendor_listing_method.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    

    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
           Vendor

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Vendor</li>
        </ol>
    </section>
    
    <!-- Main content -->
    <section class="content">

        <form id="frmVendorSearch">
            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
            <input type="hidden" id="hdVendor_Id" name="Filter.Vendor_Id" />
            <input type="hidden" id="hdfVendor_Name" name="Filter.Vendor_Name" />

            <input type="hidden" id="hdMaterial_Id" name="Filter.Material_Id" />
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    @*<div class="form-group">
                                        <label for="txtVendorName">Vendor Name </label>
                                        <input type="text" class="form-control" id="txtVendorName" placeholder="Enter Vendor Name" name="Filter.Vendor_Name" value="@Model.Filter.Vendor_Name">
                                        <input type="hidden" id="hdnVendorId" value="@Model.Filter.Vendor_Id" name="Filter.Vendor_Id">
                                    
                                    </div>*@

                                    <div class="form-group">
                                        <div class="auto-complete">
                                            <input type="text" class="form-control input-sm" id="txtVendorName" placeholder="Enter Vendor Name" value="">
                                            <input type="hidden" id="hdnVendorId" value="@Model.Filter.Vendor_Id" name="Filter.Vendor_Id" class="auto-complete-value">
                                            <input type="hidden" id="txtVendorName" value="@Model.Filter.Vendor_Name" name="Filter.Vendor_Name" class="auto-complete-label">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtMaterialName">Material Name</label>
                                        <div class="auto-complete">
                                            <input type="text" class="form-control input-sm" id="txtMaterialName" placeholder="Enter material name">
                                            <input type="hidden" id="hdfMaterial_Id" value="@Model.Filter.Material_Id" name="Filter.Material_Id" class="auto-complete-value">
                                            <input type="hidden" id="hdnMaterial_Name" value="@Model.Filter.Material_Name" name="Filter.Material_Name" class="auto-complete-label">
                                        </div>
                                    </div>  
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group pull-left">
                                        <button type="button" id="btnSearch" class="btn btn-success btn-sm">Search</button>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Vendor")" role="button">Create Vendor</a>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="btn-group pull-right">

                                       @*<input type="hidden" id="hdfVendorId" name="EditMode.Vendor_Id" />*@
                                        
                                        <input type="hidden" id="hdfVendorId" name="Vendor.Vendor_Id" />
                                        
                                        <button type="button" id="btnEdit" class="btn btn-warning btn-sm" style="display:none;">Edit Vendor</button>
                                        <button type="button" id="btnView_Material" class="btn btn-primary btn-sm" style="display:none;">View Material</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </form>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid" id="divDefecTypeGrid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped" id="tblSearchVendor">
                            <tr>
                                <th style="width:50px;"></th>
                                <th>Vendor name</th>
                                <th>Email</th>
                                <th>Head Office Address</th>

                            </tr>
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <div class="pagination pagination-sm no-margin pull-right">
                            <ul></ul>
                        </div>

                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col (left) -->
        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->





