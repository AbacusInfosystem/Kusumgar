@{
    ViewBag.Title = "Create Supplier";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Supplier

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            Industrial
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" data-toggle="tab">Primary</a></li>
                        <li><a href="#tab_2" data-toggle="tab">Products/Services</a></li>
                        <li><a href="#tab_3" data-toggle="tab">Certificates</a></li>
                        <li><a href="#tab_4" data-toggle="tab">Other Details</a></li>
                        <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-info"></i></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <br />
                            <form id="frmVendor">

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="txtSupplierName">Supplier Name :</label>
                                            <input type="text" id="txtSupplierName" class="form-control input-sm" placeholder="Enter Supplier Name">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeAddress">Head Office Address :</label>
                                                <textarea id="txtHeadOfficeAddress" class="form-control input-sm" placeholder="Enter Head Office Address"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="drpHeadOfficeState">Head Office State : </label>
                                            <select id="drpHeadOfficeState" class="form-control input-sm">
                                                <option>-Select Head Office State-</option>
                                                <option>Maharashtra</option>
                                                <option>Gujrat</option>
                                                <option>Goa</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="drpHeadOfficeNation">Head Office Nation : </label>
                                            <select id="drpHeadOfficeNation" class="form-control input-sm">
                                                <option>-Select Head Office Nation-</option>
                                                <option>India</option>
                                                <option>Uk</option>
                                                <option>Aus</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    @*<div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeArea">Head Office Area :</label>
                                                <input type="text" id="txtHeadOfficeArea" class="form-control input-sm" placeholder="Enter Head Office Area">
                                            </div>
                                        </div>
                                    </div>*@
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeZipCode">Head Office ZipCode :</label>
                                                <input type="text" id="txtHeadOfficeZipCode" class="form-control input-sm" placeholder="Enter Head Office ZipCode">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtEmailId">Email Id :</label>
                                                <input type="text" id="txtEmailId" class="form-control input-sm" placeholder="Enter Email Id">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeFaxNo">Head Office FaxNo :</label>
                                                <input type="text" id="txtHeadOfficeFaxNo" class="form-control input-sm" placeholder="Enter Head Office FaxNo">
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeLandline1">Head Office Landline1 :</label>
                                                <input type="text" id="txtHeadOfficeLandline1" class="form-control input-sm" placeholder="Enter Head Office Landline">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeLandline2">Head Office Landline2 :</label>
                                                <input type="text" id="txtHeadOfficeLandline2" class="form-control input-sm" placeholder="Enter Head Office Landline">
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-md-4">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="txtHeadOfficeFaxNo">Head Office FaxNo :</label>
                                                <input type="text" id="txtHeadOfficeFaxNo" class="form-control input-sm" placeholder="Enter Head Office FaxNo">
                                            </div>
                                        </div>
                                    </div>*@


                                </div>


                                <div class="box-footer">
                                    <button type="submit" id="btnSave" class="btn btn-success">Save Primary</button>
                                    <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>
                                </div>

                            </form>

                        </div><!-- /.tab-pane -->

                        
                        <div class="tab-pane" id="tab_2">
                            <br />

                            @Html.Partial("_ProductServicesDetails")

                        </div><!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_3">
                            <br />

                            @Html.Partial("_CertificationDetails")

                        </div><!-- /.tab-pane -->

                        <div class="tab-pane" id="tab_4">
                            <br />
                            <form id="frmOtherDetails">
                                 
                                @*<div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="txtInspectionFacility">Inspection Facility :</label> <br>
                                            <textarea id="txtInspectionFacility" class="form-control input-sm" placeholder="Enter Inspection Facility"></textarea>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="txtTestingFacility">Testing Facility :</label> <br>
                                            <textarea id="txtTestingFacility" class="form-control input-sm" placeholder="Enter Testing Facility"></textarea>
                                        </div>
                                    </div>
                                    </div>*@
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="txtRemarkaboutSupplier">Remark about Supplier :</label>
                                                <textarea id="txtRemarkaboutSupplier" class="form-control input-sm" placeholder="Enter Remark about Supplier"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="chPaymentBlock">Supplier Method :</label><br>
                                                <input type="checkbox" name="c1">Method1 &nbsp;&nbsp;&nbsp;
                                                <input type="checkbox" name="c1">Method2
                                            </div>
                                        </div>
                                        
                                    </div>
                               
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="rdPaymentBlock">Payment Block :</label><br>
                                                <input type="checkbox" name="r2" checked>Block &nbsp;&nbsp;&nbsp;
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="rdApprovedByDirector">Approved By Director :</label><br>
                                                <input type="checkbox" name="r3" checked>Approved &nbsp;&nbsp;&nbsp;
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="rdApprovedByDirector">Status :</label><br>
                                                <input type="checkbox" name="r3" checked>Active &nbsp;&nbsp;&nbsp;
                                            </div>
                                        </div>
                                    </div>


                                
                                
                                <div class="box-footer">
                                    <button type="button" id="btnSaveOtherDetails" class="btn btn-success">Save OtherDetails</button>
                                    <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning">Cancle and Open Search</a>
                                </div>
                                </form>
                        </div>
                        </div><!-- /.tab-content -->
                    </div><!-- nav-tabs-custom -->

            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

