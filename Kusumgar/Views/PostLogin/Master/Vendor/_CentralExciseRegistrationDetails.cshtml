@model Kusumgar.Models.VendorViewModel
@using KusumgarBusinessEntities.Common
<form id="frmCentralRegistrationDetails">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtCentralExciseRegistrationDetails">Central Excise Registration Details</label>
                <input type="text" id="txtCentralExciseRegistrationDetails" class="form-control input-sm" placeholder="Enter Central Excise Registration Details" name="Vendor.Vendor_Entity.Central_Excise_Registration_Details" value="@Model.Vendor.Vendor_Entity.Central_Excise_Registration_Details" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txt">Registration No</label>
                <input type="text" id="txtRegistrationNo" class="form-control input-sm" placeholder="Enter Registration No" name="Vendor.Vendor_Entity.Registration_No" value="@Model.Vendor.Vendor_Entity.Registration_No" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txRanget">Range</label>
                <input type="text" id="txtRange" class="form-control input-sm" placeholder="Enter Range" name="Vendor.Vendor_Entity.Range" value="@Model.Vendor.Vendor_Entity.Range" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtDivision">Division</label>
                <input type="text" id="txtDivision" class="form-control input-sm" placeholder="Enter Division" name="Vendor.Vendor_Entity.Division" value="@Model.Vendor.Vendor_Entity.Division" />

            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtPAN">PAN</label>
                <input type="text" id="txtPAN" class="form-control input-sm" placeholder="Enter PAN" name="Vendor.Vendor_Entity.PAN" value="@Model.Vendor.Vendor_Entity.PAN" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtTAN">TAN</label>
                <input type="text" id="txtTAN" class="form-control input-sm" placeholder="Enter TAN" name="Vendor.Vendor_Entity.TAN" value="@Model.Vendor.Vendor_Entity.TAN" />
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtTaxExcemptionCode">Tax Excemption Code</label>
                <input type="text" id="txtTaxExcemptionCode" class="form-control input-sm" placeholder="Enter Tax Excemption Code" name="Vendor.Vendor_Entity.Tax_Excemption_Code" value="@Model.Vendor.Vendor_Entity.Tax_Excemption_Code" />
            </div>

        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label for="drpCurrencyCode">Currency Code</label>
                <select id="drpCurrencyCode" class="form-control input-sm" name="Vendor.Vendor_Entity.Currency_Code">
                    <option>-Select Currency-</option>
                    @foreach (var item in LookupInfo.Get_Currency_Type())
                                                    {
                                                    if (Model.Vendor.Vendor_Entity.Currency_Code == item.Key)
                                                    {
                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                    }
                                                    else
                                                    {
                    <option value="@item.Key">@item.Value</option>
                                                    }
                                                    }
                </select>
            </div>
        </div>




        <div class="col-md-4">
            <div class="form-group">
                <label for="txtVatType">VAT Type</label>
                <input type="text" id="txtVatType" class="form-control input-sm" placeholder="Enter VAT Type" name="Vendor.Vendor_Entity.VAT" value="@Model.Vendor.Vendor_Entity.VAT_Type" />
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="drpPaymentTerm">Payment Terms</label>
                <select id="drpPaymentTerm" class="form-control input-sm" name="Vendor.Vendor_Entity.PaymentTerms">
                    <option>-Select Payment Terms-</option>
                    @foreach (var item in LookupInfo.Get_Payment_Terms())
                {
                    if (Model.Vendor.Vendor_Entity.PaymentTerms == item.Key)
                    {
                    <option value="@item.Key" selected="selected">@item.Value</option>
                    }
                    else
                    {
                    <option value="@item.Key">@item.Value</option>
                    }
                }
                </select>

            </div>
        </div>


    </div>

</form>
<div class="box-footer">
    <button type="button" id="btnCentralRegistrationDetails" class="btn btn-success">Save Central Registration Details</button>
    <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>
</div>

