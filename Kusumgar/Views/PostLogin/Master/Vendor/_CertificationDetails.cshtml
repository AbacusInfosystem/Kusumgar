@model Kusumgar.Models.VendorViewModel
    <form id="frmCertificationDetails">
    @*<h4 class="page-header">Certification</h4>*@
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtPerformanceCertification">Performance Certification :</label>
                <textarea id="txtPerformanceCertification" class="form-control input-sm" placeholder="Enter Performance Certification" name="Vendor.Vendor_Entity.Performance_Certification">"@Model.Vendor.Vendor_Entity.Performance_Certification"</textarea>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="drpPerformanceCertificationYear ">Performance Certification Year :</label>
               
                    <div class="editor-field">
                        <select id="drpPerformanceCertificationYear" class="form-control input-sm">
                            <option>-Select Year-</option>
                            @for (var i = 0; i < 9; i++){

                             <option>@(DateTime.Now.AddYears(i).Year)</option>
                            }

                          
                        </select>
                             </div>
               
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtPerformanceCertificationCategory">Performance Certification Category :</label>
                <textarea id="txtPerformanceCertificationCategory" class="form-control input-sm" placeholder="Enter Performance Certification Category" name="Vendor.Vendor_Entity.Performance_Certification_Category">@Model.Vendor.Vendor_Entity.Performance_Certification_Category</textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtQualityCertification">Quality Certification :</label>
                <textarea id="txtQualityCertification" class="form-control input-sm" placeholder="Enter Quality Certification" name="Vendor.Vendor_Entity.Quality_Certification">@Model.Vendor.Vendor_Entity.Quality_Certification</textarea>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="drpQualityCertificationYear ">Quality Certification Year :</label>
                <select id="drpQualityCertificationYear" class="form-control input-sm" name="Model.Vendor.Vendor_Entity.Quality_Certification_Year">
                    <option>-Select Year-</option>
                    <option>@DateTime.Now.Year</option>
                    <option>@DateTime.Now.AddYears(1).Year</option>

                    <option>@DateTime.Now.AddYears(2).Year</option>
                    <option>@DateTime.Now.AddYears(3).Year</option>
                    <option>@DateTime.Now.AddYears(4).Year</option>
                    <option>@DateTime.Now.AddYears(5).Year</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtQualityCertificationCategory">Quality Certification Category :</label>
                <textarea id="txtQualityCertificationCategory" class="form-control input-sm" placeholder="Enter Supplier Name" name="Vendor.Vendor_Entity.Quality_Certification_Category">@Model.Vendor.Vendor_Entity.Quality_Certification_Category</textarea>
            </div>
        </div>
    </div>
     <div class="box-footer">
         <button type="button" id="btnSaveCertificationDetails" class="btn btn-success">Save CertificationDetails</button>
         <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning">Cancle and Open Search</a>
     </div>
</form>