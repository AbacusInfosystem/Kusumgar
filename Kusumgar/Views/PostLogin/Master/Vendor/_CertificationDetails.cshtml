 <form id="frmCertificationDetails">
    @*<h4 class="page-header">Certification</h4>*@
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtPerformanceCertification">Performance Certification :</label>
                <textarea id="txtPerformanceCertification" class="form-control input-sm" placeholder="Enter Performance Certification"></textarea>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="drpPerformanceCertificationYear ">Performance Certification Year :</label>
                <select id="drpPerformanceCertificationYear" class="form-control input-sm">
                    <option>-Select Year-</option>
                    <option>2015</option>
                    <option>2014</option>
                    <option>2013</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtPerformanceCertificationCategory">Performance Certification Category :</label>
                <textarea id="txtPerformanceCertificationCategory" class="form-control input-sm" placeholder="Enter Supplier Name"></textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtQualityCertification">Quality Certification :</label>
                <textarea id="txtQualityCertification" class="form-control input-sm" placeholder="Enter Quality Certification"></textarea>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="drpQualityCertificationYear ">Quality Certification Year :</label>
                <select id="drpQualityCertificationYear" class="form-control input-sm">
                    <option>-Select Year-</option>
                    <option>2015</option>
                    <option>2014</option>
                    <option>2013</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="txtQualityCertificationCategory">Quality Certification Category :</label>
                <textarea id="txtQualityCertificationCategory" class="form-control input-sm" placeholder="Enter Supplier Name"></textarea>
            </div>
        </div>
    </div>
     <div class="box-footer">
         <button type="button" id="btnSaveCertificationDetails" class="btn btn-success">Save CertificationDetails</button>
         <a href="@Url.Action("Search","Vendor")" id="btnCancel" class="btn btn-warning">Cancle and Open Search</a>
     </div>
</form>