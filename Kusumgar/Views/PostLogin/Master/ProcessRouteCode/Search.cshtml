@{
    ViewBag.Title = "Process Route Code";
}

<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent!important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Process Route Code
           
            <small>Search</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Process Route Code Search</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Customer Search -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- form start -->
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label for="txtProcessRouteCode">Process route code name</label>
                                    <input type="text" class="form-control" id="txtProcessRouteCode" placeholder="Enter process route code" />
                                </div>

                            </div>

                        </div>

                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-6">
                                
                                    <div class="btn-group pull-left">
                                        <button type="submit" id="btnSearch" class="btn btn-success">Search</button>
                                        <a class="btn btn-primary" href="@Url.Action("Index","ProcessRouteCode")" role="button">Create Process Route Code</a>
                                    </div>

                                </div>
                                <div class="col-md-6">

                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-warning">Edit Process Route Code</button>
                                </div>

                            </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <!-- Customer Search Ends -->

        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped">
                            <tr>
                                <th style="width:50px;"></th>
                                <th style="width:150px;">Process Route Code</th>
                                <th>Process</th>
                                <th style="width:100px;">Status</th>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" checked /></td>
                                <td>PR001</td>
                                <td>Desize-Scour ( In Jigger ) - Drying</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>PR002</td>
                                <td>Desize-Scour ( In Jet)-Drying</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                            <td>
                            <input type="radio" name="r1" /></td>
                            <td>PR003</td>
                            <td>Desize-Scour ( In Jigger)-  Drying- Finishing</td>
                            <td>Active</td>
                        </tr>
                            <tr>
                                <td>
                                <input type="radio" name="r1" /></td>
                                <td>PR016</td>
                                <td>Desize-Scour- Dyeing( In Jet)- Drying- Printing- Ageing- Washing in Jet- Drying- Finishing</td>
                                <td>Active</td>
                            </tr>
                           
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
          

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col (left) -->
        </div>

       
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        //Date range picker
        $('#dtpContractExpirationDate').datepicker();

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>
