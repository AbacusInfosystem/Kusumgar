@model Kusumgar.Models.UserViewModel
@using KusumgarBusinessEntities.Common
<script src="~/Scripts/Master/user_event.js"></script>
<script src="/Scripts/Master/user_method.js"></script>
    <script src="~/Scripts/Master/user_validation.js"></script>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    
    <section class="content-header">
        <h1>
            Employee

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>CRM</li>
            <li class="active">Customer</li>
        </ol>
    </section>

    <form id="frmUser">
        <input type="hidden" class="form-control input-sm" name="User.UserEntity.UserId" id="hdnUserId"  value="@Model.User.UserEntity.UserId">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title"></h3>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="box-body">
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Personal Information</h3>
                                    </div>
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtFirstName" style="color: #333">First Name</label>
                                                <input type="text" class="form-control input-sm" name="User.UserEntity.First_Name" id="txtFirstName" placeholder="Enter First name" value="@Model.User.UserEntity.First_Name">
                                            </div>

                                            <div class="form-group">
                                                <label for="txtMiddleName" style="color: #333">Middle Name</label>
                                                <input type="text" class="form-control input-sm" name="User.UserEntity.Middle_Name" id="txtMiddleName" placeholder="Enter Middle name" value="@Model.User.UserEntity.Middle_Name">
                                            </div>

                                            <div class="form-group">
                                                <label for="txtLastName" style="color: #333">Last Name</label>
                                                <input type="text" class="form-control input-sm" id="txtLastName" name="User.UserEntity.Last_Name" placeholder="Enter Last name" value="@Model.User.UserEntity.Last_Name">
                                            </div>

                                            <div class="form-group">
                                                <label for="txtDesignation" style="color: #333">Designation</label>
                                                <input type="text" class="form-control input-sm" name="User.UserEntity.Designtation" id="txtDesignation" placeholder="Enter Designation" value="@Model.User.UserEntity.Designtation">
                                            </div>

                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtBirthDate" style="color: #333">Birth Date</label>
                                                <input type="text" class="form-control input-sm" name="User.UserEntity.Birth_Date" id="txtBirthDate" placeholder="Enter Birth Date" value="@(Model.User.UserEntity.Birth_Date == DateTime.MinValue ? "" : Model.User.UserEntity.Birth_Date.ToString("MM/dd/yyyy"))">
                                            </div>

                                            <div class="form-group">
                                                <label for="txtDate_of_Joing" style="color: #333">Date of Joing</label>
                                                <input type="text" class="form-control input-sm" name="User.UserEntity.Date_Of_Joining" id="txtDate_of_Joing" placeholder="Enter Date of Joining" value="@(Model.User.UserEntity.Date_Of_Joining == DateTime.MinValue ? "" : Model.User.UserEntity.Date_Of_Joining.ToString("MM/dd/yyyy"))">
                                            </div>

                                            <div class="form-group">
                                                <label for="rdGender" style="color: #333">Gender :</label><br>
                                                @foreach (var item in LookupInfo.GetGenderTypes())
                                                {
                                                    if (Model.User.UserEntity.Gender == item.Key)
                                                    {
                                                        <label style="color: #333">
                                                            <input type="radio" name="rdGender" checked value="@item.Key" />
                                                            &nbsp;&nbsp;&nbsp;&nbsp; @item.Value
                                                        </label><br>
                                                    }
                                                    else
                                                    {
                                                        <label style="color: #333">
                                                            <input type="radio" name="rdGender" value="@item.Key" style="color: #333" />
                                                            &nbsp;&nbsp;&nbsp;&nbsp; @item.Value
                                                        </label><br>
                                                    }
                                                }
                                                @if (Model.User.UserEntity.Gender != 0)
                                                {
                                                    <input type="hidden" value="@Model.User.UserEntity.Gender" name="User.UserEntity.Gender" id="hdnGender">
                                                }
                                                else
                                                {
                                                    <input type="hidden" name="User.UserEntity.Gender" id="hdnGender">
                                                }
                                            </div>

                                            

                                        </div>

                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Other Information</h3>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                           
                                            <div class="form-group">
                                                @{

                                                <label style="color: #333">Role : </label><br>
                                                foreach (var item in Model.RoleInfoList)
                                                {

                                                if (Model.User.UserRoleList.Where(a => a.UserRoleEntity.Role_Id == item.RoleEntity.Role_Id).Count() > 0)
                                                {
                                                <label style="color: #333">
                                                    <input type="checkbox" name="Chk_User_Role" id="Chk_User_Role" checked value="@item.RoleEntity.Role_Id" />
                                                    &nbsp;&nbsp; @item.RoleEntity.Role_Name &nbsp; &nbsp;
                                                </label>
                                                }
                                                else
                                                {
                                                <label style="color: #333">
                                                    <input type="checkbox" name="Chk_User_Role" id="Chk_User_Role" value="@item.RoleEntity.Role_Id" />
                                                    &nbsp;&nbsp; @item.RoleEntity.Role_Name &nbsp;&nbsp;
                                                </label>
                                                }
                                                }

                                                <input type="hidden" id="hdnRole_Ids" name="User.Role_Ids">
                                                }
                                            </div>

                                            <div class="form-group">
                                                @if (Model.User.UserEntity.System_User_Flag == true)
                                                {
                                                    <label>
                                                        <input type="checkbox" name="ChkSystem_User_Flag" id="ChkSystem_User_Flag" checked value="@Model.User.UserEntity.System_User_Flag" />
                                                        &nbsp;&nbsp;&nbsp;&nbsp; Online User
                                                    </label>
                                                }
                                                else
                                                {
                                                    <label>
                                                        <input type="checkbox" name="ChkSystem_User_Flag" id="ChkSystem_User_Flag"  value="@Model.User.UserEntity.System_User_Flag" />
                                                        &nbsp;&nbsp;&nbsp;&nbsp; Online User
                                                    </label>
                                                }
                                            </div>
                                            <input type="hidden" id="hdnSystem_User_Flag" name="User.UserEntity.System_User_Flag" value="@Model.User.UserEntity.System_User_Flag.ToString()">

                                            <div class="form-group">
                                                @if (Model.User.UserEntity.Is_Active == false)
                                                {
                                                    <label>
                                                        <input type="checkbox" name="chkStatus" />
                                                        &nbsp;&nbsp;&nbsp;&nbsp; Active Status
                                                    </label>
                                                }
                                                else
                                                {
                                                    <label>
                                                        <input type="checkbox" name="chkStatus" checked/>
                                                        &nbsp;&nbsp;&nbsp;&nbsp; Active Status
                                                    </label>
                                                }
                                            </div>
                                            <input type="hidden" id="hdnActive" name="User.UserEntity.Is_Active" value="@Model.User.UserEntity.Is_Active.ToString()">

                                        </div>
                                        <div class="col-md-6">
                                            @{
                                                string display = "none";
                                                if (Model.User.UserEntity.System_User_Flag == true)
                                                {
                                                    display = "block";
                                                }
                                                <div id="dvUser" style="display:@display">
                                                    <div class="form-group">
                                                        <label for="txtUser_Name" style="color: #333">User Name</label>
                                                        <input type="text" class="form-control input-sm" name="User.UserEntity.User_Name" id="txtUser_Name" placeholder="Enter User Name" value="@Model.User.UserEntity.User_Name">
                                                        <input type="hidden" id="hdnUser_Name" placeholder="Enter User Name" value="@Model.User.UserEntity.User_Name">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="txtPassword" style="color: #333">Password</label>
                                                        <input type="password" class="form-control input-sm" name="User.UserEntity.Password" id="txtPassword" placeholder="Enter Password" value="@Model.User.UserEntity.Password">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="txtConform_Password" style="color: #333">Conform Password</label>
                                                        <input type="password" class="form-control input-sm" name="User.UserEntity.ConformPassword" id="txtConform_Password" placeholder="Enter Conform Password" value="@Model.User.UserEntity.Password">
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Residence Contact</h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtResidence_Landline" style="color: #333">Residence Landline</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" class="form-control input-sm" id="txtResidence_Landline" placeholder="Enter Residence Landline" name="User.UserEntity.Residence_Landline" value="@Model.User.UserEntity.Residence_Landline">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtMobile_No1" style="color: #333">Mobile No1 </label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-mobile"></i>
                                                    </div>

                                                    <input type="text" class="form-control input-sm" id="txtMobile_No1" placeholder="Enter Mobile No" name="User.UserEntity.Mobile_No1" value="@Model.User.UserEntity.Mobile_No1" maxlength="10"/>
                                                </div>
                                            </div>

                                            <div class="form-group">

                                                <label for="txtResidence_PinCode" style="color: #333">Residence PinCode</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-crosshairs"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtResidence_PinCode" placeholder="Enter Residence PinCode" name="User.UserEntity.Residence_PinCode" value="@Model.User.UserEntity.Residence_PinCode" maxlength="6">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="txtPersonal_Email" style="color: #333">Personal Email</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtPersonal_Email" placeholder="Enter Personal Email" name="User.UserEntity.Personal_Email" value="@Model.User.UserEntity.Personal_Email">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtMobile_No2" style="color: #333">Mobile No2 </label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-mobile"></i>
                                                    </div>

                                                    <input type="text" class="form-control input-sm" id="txtMobile_No2" placeholder="Enter Mobile No" name="User.UserEntity.Mobile_No2" value="@Model.User.UserEntity.Mobile_No2" maxlength="10"/>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtResidence_Address" style="color: #333">Residence Address</label>
                                                <textarea class="form-control input-sm" id="txtResidence_Address" placeholder="Enter Residence Landline" name="User.UserEntity.Residence_Address">@Model.User.UserEntity.Residence_Address</textarea>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Office Contact</h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtOffice_Landline" style="color: #333">Office Landline</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" class="form-control input-sm" id="txtOffice_Landline" placeholder="Enter Office Landline" name="User.UserEntity.Office_Landline" value="@Model.User.UserEntity.Office_Landline">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtOffice_PinCode" style="color: #333">Office PinCode</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-crosshairs"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtOffice_PinCode" placeholder="Enter Office PinCode" name="User.UserEntity.Office_PinCode" value="@Model.User.UserEntity.Office_PinCode" maxlength="6">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtFax_No" style="color: #333">Fax No</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-fax"></i>
                                                    </div>
                                                    <input type="text" class="form-control input-sm" id="txtFax_No" placeholder="Enter Fax No" name="User.UserEntity.Fax_No" value="@Model.User.UserEntity.Fax_No">
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtOffice_Email" style="color: #333">Office Email</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtOffice_Email" placeholder="Enter Personal Email" name="User.UserEntity.Office_Email" value="@Model.User.UserEntity.Office_Email">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtOffice_Address" style="color: #333">Office Address</label>
                                                <textarea class="form-control input-sm" id="txtOffice_Address" placeholder="Enter Office Landline" name="User.UserEntity.Office_Address">@Model.User.UserEntity.Office_Address</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="btn-group">
                                <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                <a href="@Url.Action("Search", "User")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- /.row -->
        </section>
        <!-- /.content -->
    </form>
</div>
<!-- /.content-wrapper -->


