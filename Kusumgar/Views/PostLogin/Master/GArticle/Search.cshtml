@{
    ViewBag.Title = "Search G Article";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            G Article

            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> G Article Search</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">

        <!-- G Article Search -->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- form start -->
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label for="txtFullCode">Full Code</label>

                                    <input type="text" class="form-control" id="txtFullCode" placeholder="Enter Full Code" />
                                </div>

                                <div class="form-group">
                                    <label for="txtFullCode">Yarn Type</label>
                                    <select id="drpYarn_type" class="form-control input-sm" >
                                        <option>Select Yarn type</option>
                                        <option>Polyster texturised</option>
                                        <option>Air texturised Nylon</option>
                                        <option>Viscose Staple</option>
                                        <option>Polyster Cotton Mix</option>
                                        <option>Meta aramide</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                        <div class="box-footer">

                            <div class="row">
                                <div class="col-md-6">

                                    <div class="btn-group pull-left">
                                        <button type="submit" id="btnSearch" class="btn btn-success">Search</button>
                                        <a class="btn btn-primary" href="@Url.Action("Index","GArticle")" role="button">Create G Article</a>
                                    </div>

                                </div>
                                <div class="col-md-6">

                                    <div class="btn-group pull-right">
                                        <button type="button" class="btn btn-warning">Edit G Article</button>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped">
                            <tr>
                                <th style="width:50px;"></th>
                                <th style="width:400px;">Full Code</th>
                                <th style="width:200px;">Yarn Type</th>
                                <th style="width:200px;">QualityNo</th>
                                <th style="width:200px;">Weave</th>
                                <th style="width:200px;">Grey Width Cms</th>
                                <th style="width:200px;">GSM</th>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" checked />
                                </td>
