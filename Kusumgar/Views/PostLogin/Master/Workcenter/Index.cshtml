@{
    ViewBag.Title = "Workcenter";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Workcenter
           
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Workcenter</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>


                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <br />
                        <div class="row">
                            <div class="col-md-4">

                                  <div class="form-group">
                                    <label>Workcenter</label>
                                    <select class="form-control" id="drpWorkcenter">
                                        <option>Jigger</option>
                                        <option>Jet</option>
                                        <option>Stenter</option>
                                        <option>Calandar</option>
                                        <option>Printing Machine</option>
                                        <option>Ager Machine</option>
                                        <option>Inspection Machine</option>
                                        <option>Lab Testing Machine</option>
                                        <option>Lab Dyeing Machine</option>
                                        <option>Utility Machines</option>
                                        <option>Material Handling Equipments</option>
                                        <option>Batch (A-Frame)</option>
                                        <option>Box Trollies</option>
                                        <option>Stitching Machine</option>
                                        <option>Colour Kitchen</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="txtProcessRouteCode">Machine Code</label>
                                    <input type="text" class="form-control" id="txtProcessRouteCode" placeholder="Enter process route code" />
                                </div>

                                <div class="form-group">
                                    <label for="txtProcessName1">Machine Name</label>
                                    <input type="text" class="form-control" id="txtProcessName1" placeholder="Enter process name" />
                                </div>

                                <div class="form-group">
                                    <label for="txtProcessName2">Capacity</label>
                                    <input type="text" class="form-control" id="txtProcessName2" placeholder="Enter process name" />
                                </div>

                                <div class="form-group">
                                    <label for="txtProcessName3">Make</label>
                                    <input type="text" class="form-control" id="txtProcessName3" placeholder="Enter process name" />
                                </div>

                                <div class="form-group">
                                    <label>
                                        <input type="checkbox" name="chkIsActive" checked />
                                        &nbsp;&nbsp;&nbsp;&nbsp; Active Status
                                   
                                    </label>
                                </div>

                            </div>

                            <div class="col-md-8">

                            <table class="table table-striped">
                            <tr>
                                <th style="width:150px;">Machine Code</th>
                                <th>Machine Name</th>
                                <th>Capacity</th>
                                <th>Make</th>
                                <th style="width:100px;">Status</th>
                            </tr>
                            <tr>
                                <td>JIG001</td>
                                <td>Jigger Machine 1</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                 <td>Active</td>
                            </tr>
                            <tr>
                                <td>JIG002</td>
                                <td>Jigger Machine 2</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>JIG003</td>
                                <td>Jigger Machine 3</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>JIG004</td>
                                <td>Jigger Machine 4</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>JIG005</td>
                                <td>Jigger Machine 5</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                <td>Active</td>
                            </tr>
                            <tr>
                                <td>JIG006</td>
                                <td>Jigger Machine 6</td>
                                <td>1000</td>
                                <td>ABC Machine Manufacturers</td>
                                <td>Active</td>
                            </tr>
                           
                        </table>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button type="submit" id="btnSearch" class="btn btn-success">Save</button>
                            <a href="@Url.Action("Search", "Workcenter")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>
