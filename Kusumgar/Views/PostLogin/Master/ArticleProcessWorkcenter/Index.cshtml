@{
    ViewBag.Title = "Article Process Workcenter";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Article Process Workcenter

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Article Process Workcenter</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>


                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <br />
                        <div class="row">
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label for="txtProcess_Route_Code">Process Route Code</label>
                                    <input type="text" class="form-control" id="txtProcess_Route_Code" placeholder="Enter Process Route Code">
                                </div>

                                @*<div class="form-group">
                                        <input type="radio" id="1stPreference" name="Preference">1st Preference
                                    </div>*@

                            </div>

                            <div class="col-md-4">

                                <div class="form-group">
                                    <label for="txtWorkcenter">Workcenter</label>
                                    <input type="text" class="form-control" id="txtWorkcenter" placeholder="Enter Workcenter">
                                </div>

                                @*<div class="form-group">
                                        <input type="radio" id="2ndPreference" name="Preference">2nd Preference
                                    </div>*@

                            </div>

                            @*<div class="col-md-4">
                                  <div class="form-group">
                                      @*<label for="Preference">Preference</label><br>
                                      <input type="radio" id="1stPreference" name="Preference">1st Preference<br>
                                      <input type="radio" id="2stPreference" name="Preference">2st Preference<br>
                                      <br><br><br>
                                      <input type="radio" id="3rdPreference" name="Preference">3rd Preference
                                  </div>
                                </div>*@
                        </div>

                        <div class="row">
                            <div class="col-md-2">

                                <div class="form-group">
                                  
                                    <label>Preference </label><br>
                                    <label>
                                        <input type="radio" id="1stPreference"  name="Preference" checked>
                                    </label> 1st Preference
                                </div>

                            </div>

                            <div class="col-md-2">

                                <div class="form-group">
                                    <br>
                                    <input type="radio" id="2stPreference" name="Preference">  2nd Preference
                                </div>

                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <br>
                                    <input type="radio" id="3rdPreference" name="Preference">  3rd Preference
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtAniticipated_Issues">Aniticipated Issues</label>
                                    <textarea class="form-control" id="txtAniticipated_Issues" placeholder="Enter Aniticipated Issues"></textarea>
</div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtPrecautions">Precautions</label>
                                    <textarea class="form-control" id="txtPrecautions" placeholder="Enter Precautions"></textarea>
                                </div>
                            </div>

                            

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtWastage_in_Percentage">Wastage in Percentage</label>
                                    <input type="text" class="form-control" id="txtWastage_in_Percentage" placeholder="Enter Wastage in Percentage">
                                </div>
                            </div>
                        </div>

                            <div class="box-footer">
                                <button type="submit" id="btnSearch" class="btn btn-success">Save</button>
                                <a href="@Url.Action("Search", "ArticleProcessWorkcenter")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                            </div>


                        </div>
                </div>
            </div>
        </div>
    </section>
</div>

