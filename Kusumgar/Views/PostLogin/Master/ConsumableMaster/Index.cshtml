
@{
    ViewBag.Title = "Index.cshtml";
}
<script src="~/Scripts/Master/Event/ConsumableMaster_Event.js"></script>
<script src="~/Scripts/Master/Method/consumablemaster_method.js"></script>
<script src="~/Scripts/Master/Validation/consumablemaster_validation.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create Consumable 
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Consumable Master</li>
        </ol>
    </section>

    <form id="frmConsumableMaster">
        <!-- Main content -->
        <section class="content">
            <div class="row">

                <div class="col-md-12">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab_1" data-toggle="tab">Primary</a></li>
                            <li><a href="#tab_2" id="Supplier_Tab" data-toggle="tab">Supplier</a></li>
                            <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-info"></i></a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1">
                                <br />
                                <div class="row">
                                    <div class="col-md-4">

                                        <input type="hidden" id="hdfPageSize" name="" value="" />
                                        <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                        <input type="hidden" id="hdfIsPagingRequired" name="" value="" />

                                        <input type="hidden" id="hdnConsumable_Id" value="@Model.Consumable.Consumable_Id">
                                        <div class="form-group">
                                            <label for="CategoryName">Category Name</label>
                                            <select id="ddlCategoryName" class="form-control input-sm" name="Consumable.Category_Name">
                                                <option value="">--Select--</option>
                                                @foreach (var item in Model.CategoryList)
                                                {
                                                    if (Model.Consumable.Category_Id == item.Category_Id)
                                                    {
                                                        <option value="@item.Category_Id" selected="selected">@item.Category_Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Category_Id">@item.Category_Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="SubCategoryName">Sub Category Name</label>
                                            <select id="ddlSubCategoryName" class="form-control input-sm" name="Consumable.SubCategory_Name">
                                                <option value="">--Select--</option>
                                                @foreach (var item in Model.SubCategoryList)
                                                {
                                                    if (Model.Consumable.SubCategory_Id == item.SubCategory_Id)
                                                    {
                                                        <option value="@item.SubCategory_Id" selected="selected">@item.SubCategory_Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.SubCategory_Id">@item.SubCategory_Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="txtMaterialName">Material Name</label>
                                            <input type="text" class="form-control" id="txtMaterialName" name="Consumable.ConsumableMaster_Entity.Material_Name" @*value="@Model.Consumable.Consumable_Entity.Material_Name"*@ placeholder="Enter Material Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="txtMaterialCode">Material Code</label>
                                            <input type="text" class="form-control" id="txtMaterialCode" name="Consumable.ConsumableMaster_Entity.Material_Code" @*value="@Model.Consumable.Consumable_Entity.Material_Code"*@ placeholder="Enter Material Code">
                                        </div>

                                        <div class="form-group">
                                            <label>
                                                @if (Model.Consumable.IsActive == true)
                                                {
                                                     @:<input type="checkbox" name="Consumable.IsActive" value="false" checked />
                                                }
                                                else
                                                {
                                                     @:<input type="checkbox" name="Consumable.IsActive" value="true" />
                                               }
                                                &nbsp;&nbsp;&nbsp;&nbsp; Is Active

                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="box-footer">
                                    <button type="button" id="btnSave" class="btn btn-success">Save</button>
                                    <a href="@Url.Action("Search", "ConsumableMaster")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                                </div>
                            </div>

                            <div class="tab-pane" id="tab_2">
                                <br />

                                @Html.Partial("_ConsumableSupplierDetails")

                            </div>
                        </div>
                    </div>

            </div>
        </div>
        </section>
        <!-- /.content -->
      </form>
    
</div>