@model Kusumgar.Models.CustomerQualityViewModel
@using KusumgarBusinessEntities.Common


<script src="~/Scripts/Master/Event/customer_quality_search_event.js"></script>
<script src="~/Scripts/Master/Method/customer_quality_search_method.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Customer Quality Creation
            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> Customer Quality Creation Search</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Customer Quality Creation Search -->
        <form id="frmSearch_Customer_Quality">
            <div class="row">
                <div class="col-md-12">

                    <div class="box box-primary">
                        <!-- form start -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <input type="hidden" id="hdfCurrent_Page" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                    <input type="hidden" id="hdnCustomer_Quality_Id" name="Customer_Quality.Customer_Quality_Id"  />
                                    <div class="form-group">
                                        <label for="txtCustomerName">Customer Name</label>
                                        <div class="auto-complete">
                                            <input type="text" class="form-control input-sm" id="txtCustomer_Name" placeholder="Enter customer name" value="">
                                            <input type="hidden" id="hdnCustomer_Id" value="@(Model.Customer_Quality.Customer_Id == 0 ? "" : Model.Customer_Quality.Customer_Id.ToString())" name="contact.contact_Entity.Customer_Id" class="auto-complete-value">
                                            <input type="hidden" id="hdnContact_Name" value="@Model.Customer_Quality.Customer.Customer_Name" name="Customer_Quality.Customer.Customer_Entity.Customer_Name" class="auto-complete-label">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="drpQuality_No">Quality No.</label>
                                        <select id="drpQuality_No" class="form-control input-sm" name="Customer_Quality.Quality.Quality_No">
                                            <option value="">--Select--</option>
                                            @foreach (var item in Model.Customer_Quality.Qualities)
                                            {
                                                if (Model.Customer_Quality.Quality_Id == item.Quality_Id)
                                                {
                                                    <option value="@item.Quality_Id" selected="selected">@item.Quality_No</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Quality_Id">@item.Quality_No</option>
                                                }
                                            }
                                        </select>
                                        <input type="hidden" id="hdnQuality_Id" value="@Model.Customer_Quality.Quality_Id" name="Customer_Quality.Quality_Id">
                                    </div>

                                </div>
                            </div>
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group pull-left">
                                            <button type="button" id="btnSearch" class="btn btn-success btn-sm">Search</button>
                                            <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "CustomerQuality")" role="button">Create </a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnView" style="display:none;" class="btn btn-success btn-sm">View</button>
                                            <button type="button" class="btn btn-warning btn-sm" id="btnEdit" style="display:none;">Edit </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblCustomer_Quality" >
                                <tr >
                                    <th style="width:50px;"></th>
                                    <th style="width:200px;">Customer Name</th>
                                    <th style="width:200px;">Quality No</th>
                                </tr>

                            </table>
                        </div>
                       
                        <div class="box-footer clearfix">
                            <div class="pagination pagination-sm no-margin pull-right">
                                <ul></ul>
                            </div>
                            <div id="divSearchGridOverlay" class="overlay">
                                <i class="fa fa-refresh fa-spin"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

    });
</script>