@model Kusumgar.Models.VendorContactViewModel
@using KusumgarBusinessEntities.Common


<script src="~/Scripts/Master/Event/vendor_contact_event.js"></script>
<script src="~/Scripts/Master/Method/vendor_contact_method.js"></script>
<script src="~/Scripts/Master/Validation/vendor_contact_validation.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Vendor Contact
            <small>Search</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">VendorContact search</li>
        </ol>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-md-12">
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#tab_1" data-toggle="tab">Vendor's contact</a></li>
                        <li><a href="#tab_2" data-toggle="tab" id="tabcustom_fields">Custom fields</a></li>
                        <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-info"></i></a></li>
                    </ul>
                    @* hidden Fields *@
                    <input type="hidden" id="hdnContact_Id" name="Vendor_Contact.Contact_Id" value="@Model.Vendor_Contact.Contact_Id">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <br />
                            <form id="frmVendor_Contact">

                                <div class="tab-pane" id="tab_1">
                                    <br />
                                    <div class="row">
                                        <div class="col-md-4">

                                            <div class="form-group">
                                                <label for="txtVendor_Name" style="color: #333">Vendor name</label>
                                                <div class="auto-complete">
                                                   
                                                    <input type="text" class="form-control input-sm" id="txtVendor_Name" placeholder="Enter vendor name" value="">
                                                    <input type="hidden" id="hdnVendor_Id" value="@(Model.Vendor_Contact.Vendor_Id == 0 ?"" : Model.Vendor_Contact.Vendor_Id.ToString())" name="Vendor_Contact.Vendor_Id" class="auto-complete-value">
                                                    <input type="hidden" id="hdnVendor_Name" value="@Model.Vendor_Contact.Vendor_Name" name="Vendor_Contact.Vendor_Name" class="auto-complete-label">

                                                </div>
                                                
                                            </div>
                                            <div class="form-group">
                                                <label for="txtContact_Name" style="color: #333">Contact name</label>
                                                <input type="text" class="form-control input-sm" id="txtContact_Name" placeholder="Enter contact name" name="Vendor_Contact.Contact_Name" value="@Model.Vendor_Contact.Contact_Name">
                                            </div>

                                            <div class="form-group">
                                                <label for="txtDesignation" style="color: #333">Designation</label>
                                                <input type="text" class="form-control input-sm" id="txtDesignation" placeholder="Enter designation" name="Vendor_Contact.Designation" value="@Model.Vendor_Contact.Designation">

                                            </div>

                                            <div class="form-group">
                                                <label for="txtEmail_Id" style="color: #333">Office Email </label>

                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtEmail_Id" placeholder="Enter email" name="Vendor_Contact.Official_Email" value="@Model.Vendor_Contact.Official_Email">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtPersonal_Email_Id" style="color: #333">Personal Email </label>

                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                    <input type="text" class="form-control input-sm" id="txtPersonal_Email_Id" placeholder="Enter email" name="Vendor_Contact.Personal_Email" value="@Model.Vendor_Contact.Personal_Email">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label>
                                                    <input type="checkbox" name="chkStatus" checked />
                                                    &nbsp;&nbsp;&nbsp;&nbsp; Active Status
                                                    <input type="hidden" id="hdnIs_Active" name="Vendor_Contact.Is_Active" value="@Model.Vendor_Contact.Is_Active.ToString()">
                                                </label>
                                            </div>

                                        </div>

                                        <div class="col-md-4">
                                            <!-- Head Office Details -->
                                            <div class="form-group">
                                                <label style="color: #333">Office Address</label>
                                                <textarea class="form-control input-sm" rows="2" id="txtOffice_Address" placeholder="Enter office address" name="Vendor_Contact.Office_Address">@Model.Vendor_Contact.Office_Address</textarea>
                                            </div>

                                            <div class="form-group">
                                                <label style="color: #333">Landline 1:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" id="txtOffice_Landline1" class="form-control input-sm" data-inputmask='"mask": "(999) 999-9999"' data-mask name="Vendor_Contact.Office_Landline1" value="@Model.Vendor_Contact.Office_Landline1" />
                                                </div>
                                                <!-- /.input group -->
                                            </div>

                                            <div class="form-group">
                                                <label style="color: #333">Landline 2:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" id="txtOffice_Landline2" class="form-control input-sm" data-inputmask='"mask": "(999) 999-9999"' data-mask name="Vendor_Contact.Office_Landline2" value="@Model.Vendor_Contact.Office_Landline2" />
                                                </div>
                                                <!-- /.input group -->
                                            </div>

                                            <div class="form-group">
                                                <label style="color: #333">Mobile 1:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-mobile"></i>
                                                    </div>
                                                    <input type="text" id="txtMobile1" class="form-control input-sm" data-inputmask='"mask": "(99) 9999999999"' data-mask name="Vendor_Contact.Mobile1" value="@Model.Vendor_Contact.Mobile1" />
                                                </div>
                                                <!-- /.input group -->
                                            </div>

                                            <div class="form-group">
                                                <label style="color: #333">Mobile 2:</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-mobile"></i>
                                                    </div>
                                                    <input type="text" id="txtMobile2" class="form-control input-sm" data-inputmask='"mask": "(99) 9999999999"' data-mask name="Vendor_Contact.Mobile2" value="@Model.Vendor_Contact.Mobile2" />
                                                </div>
                                                <!-- /.input group -->
                                            </div>
                                            <!-- Head Office Details Ends-->
                                        </div>

                                    </div>
                                    <div class="box-footer">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success btn-sm" id="btnSave_Vendor_Contact">Save</button>
                                            <a href="@Url.Action("Search","VendorContact")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancel</a>
                                        </div>
                                    </div>
                                </div><!-- /.tab-pane -->
                            </form>
                        </div><!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_2">

                            <form id="frmCustom_Fields">

                                <input type="hidden" id="hdnVendor_Contact_Custom_Field_Id">
                                <div class="row">
                                    <div class="col-md-4">
                                       
                                        <div class="form-group">
                                            <label style="color: #333">Field name :</label>
                                            <input type="text" id="txtField_Name" class="form-control input-sm" name="Field_Name" placeholder="Enter field Name" />
                                        </div>

                                        <div class="form-group">
                                            <label style="color: #333">Field value :</label>
                                            <input type="text" id="txtField_Value" class="form-control input-sm" name="Field_Value" placeholder="Enter field value" />
                                            <!-- /.input group -->
                                        </div>

                                    </div>

                                    <div class="col-md-8 ">
                                        <table class="table table-hover" id="tblCustom_Fields">
                                            <tr>
                                                <th>Field name</th>
                                                <th>Field value</th>
                                                <th style="min-width: 81px;">&nbsp; </th>
                                            </tr>
                                            @foreach (var item in Model.Vendor_Contact.Vendor_Custom_Fields)
                                            {
                                                <tr id="cust_tr_@item.Contact_Custom_Field_Id">

                                               <td>@item.Field_Name</td>
                                               <td>@item.Field_Value</td>
                                               <td>
                                                    <input type="hidden" class="hdn_Contact_Custom_Field_Id" value="@item.Contact_Custom_Field_Id">

                                                    <input type="hidden" class="Field_Name" value="@item.Field_Name">
                                                    <input type="hidden" class="Field_Value" value="@item.Field_Value">

                                                   <div class="btn-group pull-right">
                                                        <button type="button" id="btnEdit" class="btn btn-info btn-sm" onclick="Edit_Custom_Fields(@item.Contact_Custom_Field_Id)"><i class='fa fa-pencil-square-o'></i></button>
                                                       <button type="button" id="btnRemove" class="btn btn-danger btn-sm " onclick="Remove_Custom_Fields(@item.Contact_Custom_Field_Id)"><i class='fa fa-times'></i></button>
                                                   </div>
                                               </td>
                                            </tr>
                                            }

                                        </table>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success btn-sm" id="btnSave_Custom_Field">Save custom field</button>
                                        <a href="@Url.Action("Search","VendorContact")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancel</a>
                                    </div>
                                </div>

                            </form>
                        </div>

                    </div><!-- /.tab-content -->
                </div><!-- nav-tabs-custom -->
            </div><!-- /.col -->
        </div> <!-- /.row -->
        <!-- /.row -->
    </section>
  </div>