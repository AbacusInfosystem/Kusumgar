@{
    ViewBag.Title = "Customer Quality Creation";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Customer Quality Creation

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Customer Quality Creation</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" data-toggle="tab">Primary</a></li>
                        <li><a href="#tab_2" data-toggle="tab">Customer Specific Information</a></li>
                        <li><a href="#tab_3" data-toggle="tab">Attachments</a></li>
                        <li><a href="#tab_4" data-toggle="tab">Specific Funcational Standards</a></li>
                        <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-info"></i></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="txtCustomerName">Customer name</label>
                                        <input type="text" class="form-control" id="txtCustomerName" placeholder="Enter customer name">
                                    </div>

                                    <div class="form-group">
                                        <label for="txtQualityNo">Quality No.</label>
                                        <input type="text" class="form-control" id="txtQualityNo" placeholder="Enter Quality No">
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            <input type="checkbox" name="chkStatus" checked />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active Status
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="box-body table-responsive no-padding">
                                        <table class="table table-striped">
                                            <tr>
                                                <th>Customer Name</th>
                                                <th>Quality No</th>
                                            </tr>

                                            <tr>
                                                <td>Customer 1</td>
                                                <td>11000</td>
                                            </tr>

                                            <tr>
                                                <td>Customer 2</td>
                                                <td>11999</td>
                                            </tr>

                                            <tr>
                                                <td>Customer 3</td>
                                                <td>12999</td>
                                            </tr>

                                            <tr>
                                                <td>Customer 4</td>
                                                <td>12000</td>
                                            </tr>

                                            <tr>
                                                <td>Customer 5</td>
                                                <td>13000</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-success">Save Primary</button>
                                <a href="@Url.Action("Search", "CustomerQualityCreation")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab_2">
                            @Html.Partial("~/Views/PostLogin/Master/CustomerQualityCreation/_CustomerSpecificInformation.cshtml")
                        </div>

                        <div class="tab-pane" id="tab_3">
                            @Html.Partial("~/Views/PostLogin/Master/CustomerQualityCreation/_Attachments.cshtml")
                        </div>

                        <div class="tab-pane" id="tab_4">
                            @Html.Partial("~/Views/PostLogin/Master/CustomerQualityCreation/_SpecificFunctionalStandards.cshtml")
                        </div>
                    </div>
                </div><!-- nav-tabs-custom -->
            </div><!-- /.col -->
        </div> <!-- /.row -->
    </section>
</div>
<!-- /.content-wrapper -->


<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>