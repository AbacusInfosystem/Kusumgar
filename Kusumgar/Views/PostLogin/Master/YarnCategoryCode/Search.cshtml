@{
    ViewBag.Title = "Search";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Attribute Code

            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> Attribute Code Search</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">

        <!-- Yarn Category Code Search -->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                        <!-- form start -->
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <label for="drpAttributes">Attributes</label>
                                        <select id="drpAttributes" class="form-control">
                                            <option>Denier</option>
                                            <option>Twist/Mingle</option>
                                            <option>Twist type</option>
                                            <option>Ply</option>
                                            <option>Yarn type</option>
                                            <option>Shade</option>
                                            <option>Filaments</option>
                                            <option>Origin</option>
                                            <option>Shrinkage</option>
                                            <option>Tenasity</option>
                                            <option>Chemical Treatment</option>
                                            <option>Colour</option>
                                            <option>Supplier</option>
                                            <option>Weave</option>
                                        </select>

                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">

                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="btn-group pull-left">
                                            <button type="submit" id="btnSearch" class="btn btn-success">Search</button>
                                            <a class="btn btn-primary" href="@Url.Action("Index","YarnCategoryCode")" role="button">Create Attribute Code</a>
                                        </div>

                                    </div>
                                    <div class="col-md-6">

                                        <div class="btn-group pull-right">
                                            <button type="button" class="btn btn-warning">Edit Attribute Code</button>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>


        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped">
                            <tr>
                                <th style="width:50px;"></th>
                                <th>Attribute</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th style="width:100px;">Status</th>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" checked />
                                </td>
                                <td>origin</td>
                                <td>Imported</td>
                                <td>IM</td>
                                <td>Active</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1"  />
                                </td>
                                <td>Denier</td>
                                <td>10 Denier</td>
                                <td>0010</td>
                                <td>Active</td>
                            </tr>


                            <tr>
                                <td>
                                    <input type="radio" name="r1"  />
                                </td>
                                <td>Shade</td>
                                <td>Bright Yarn</td>
                                <td>BR</td>
                                <td>Active</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1"  />
                                </td>
                                <td>Supplier</td>
                                <td>ALOK IND</td>
                                <td>ALOKI</td>
                                <td>Active</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1"  />
                                </td>
                                <td>Colour</td>
                                <td>Natural</td>
                                <td>NRL</td>
                                <td>Active</td>
                            </tr>


                            <tr>
                                <td>
                                    <input type="radio" name="r1"  />
                                </td>
                                <td>Tenacity</td>
                                <td>High Tenacity</td>
                                <td>0HT</td>
                                <td>Active</td>
                            </tr>

                        </table>

                    </div>

                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>


                </div>
            </div>
        </div>
       
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        //Date range picker
        $('#dtpContractExpirationDate').datepicker();

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>