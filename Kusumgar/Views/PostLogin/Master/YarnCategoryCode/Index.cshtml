@{
    ViewBag.Title = "Yarn Category Code";
}

<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Attribute Code

            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Attribute Code</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>


                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                       
                    <div class="form-group">
                        <label>Attribute </label>
                        <select class="form-control" id="drpAttributes">
                            <option>Denier</option>
                            <option>Twist/Mingle</option>
                            <option>Twist type</option>
                            <option>Ply</option>
                            <option>Yarn type</option>
                            <option>Shade</option>
                            <option>Filaments</option>
                            <option>Origin</option>
                            <option>Shrinkage</option>
                            <option>Tenasity</option>
                            <option>Chemical Treatment</option>
                            <option>Colour</option>
                            <option>Supplier</option>
                            <option>Weave</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="txtYarnName"> Name</label>
                        <input type="text" class="form-control" id="txtYarnName" placeholder="Enter Yarn Name">
                    </div>

                    <div class="form-group">
                        <label for="txtYarnCode"> Code</label>
                        <input type="text" class="form-control" id="txtYarnCode" placeholder="Enter Yarn Code">
                    </div>

                    <div class="form-group">
                                    <label>
                                        <input type="checkbox" name="chkIsActive" checked />
                                        &nbsp;&nbsp;&nbsp;&nbsp; Active Status

                                    </label>
                                </div>

                    <div class="box-footer">
                            <button type="submit" id="btnSearch" class="btn btn-success">Save</button>
                            <a href="@Url.Action("Search","YarnCategoryCode")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Attributes Codes for selected < > Attribute</h3>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                    
                        <table class="table table-striped">
                                    <tr>
                                        <th>Attribute</th>
                                        <th> Name</th>
                                        <th> Code</th>
                                        <th> Status</th>
                                    </tr>
                                    <tr>
                                        <td>Shade</td>
                                        <td>Bright Yarn</td>
                                        <td>BR</td>
                                        <td>Active</td>
                                    </tr>
                                    <tr>
                                        <td>Supplier</td>
                                        <td>ALOK IND</td>
                                        <td>ALOKI</td>
                                        <td>Active</td>
                                    </tr>
                                    <tr>
                                        <td>Colour</td>
                                        <td>Natural</td>
                                        <td>NRL</td>
                                        <td>Active</td>
                                    </tr>

                                    <tr>
                                        <td>Tenacity</td>
                                        <td>High Tenacity</td>
                                        <td>0HT</td>
                                        <td>Active</td>
                                    </tr>

                                    <tr>
                                        <td>Denier</td>
                                        <td>10 Denier</td>
                                        <td>0010</td>
                                        <td>Active</td>
                                    </tr>

                                    <tr>
                                        <td>origin</td>
                                        <td>Imported</td>
                                        <td>IM</td>
                                        <td>Active</td>
                                    </tr>

                                </table>
                        
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>