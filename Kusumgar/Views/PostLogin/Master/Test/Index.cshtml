@model Kusumgar.Models.TestViewModel
@{
    ViewBag.Title = "Test";
}


<script src="~/Scripts/Master/Event/test_event.js"></script>
<script src="~/Scripts/Master/Method/test_method.js"></script>
<script src="~/Scripts/Master/Validation/test_validation.js"></script>
<script src="~/Scripts/generic.autocomplete.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Test
           
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Test</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-primary">
                    <!-- form start -->

                    <form id="frmTest" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-4">

                                    <input type="hidden" id="hdfPageSize" name="" value="" />
                                    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                    <input type="hidden" id="hdfIsPagingRequired" name="" value="" />

                                    <input type="hidden" id="hdfTestId" name="Test.TestEntity.Test_Id" value="@Model.Test.TestEntity.Test_Id" />

                                    <div class="form-group">
                                        <label style="color: #333">Fabric Type</label>
                                        <select class="form-control input-sm" id="drpFabricTypeName" name="Test.TestEntity.Fabric_Type_Id">
                                            <option value="">Select Fabric Type </option>


                                            @foreach (var item in Model.Fabric_Type)
                                            {
                                                if (Model.Test.TestEntity.Fabric_Type_Id == item.FabricTypeEntity.Fabric_Type_Id)
                                                {
                                                    <option value="@item.FabricTypeEntity.Fabric_Type_Id" selected="selected">@item.FabricTypeEntity.Fabric_Type_Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.FabricTypeEntity.Fabric_Type_Id">@item.FabricTypeEntity.Fabric_Type_Name</option>
                                                }

                                            }

                                        </select>
                                     
                                    </div>

                                    <div class="form-group">
                                        <label for="txtTest" style="color: #333">Test Name</label>
                                        <input type="text" class="form-control input-sm" id="txtTest" name="Test.TestEntity.Test_Name" value="@Model.Test.TestEntity.Test_Name" placeholder="Enter test name">
                                    </div>


                                    <div class="form-group">
                                        <label for="txtUnit1" style="color: #333">Test Unit #1</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit1" name="Test.Test_Unit_Name1" value="@Model.Test.Test_Unit_Name1" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit1" name="Test.TestEntity.Test_Unit1" value="@Model.Test.TestEntity.Test_Unit1" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit2" style="color: #333">Test Unit #2</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit2" name="Test.Test_Unit_Name2" value="@Model.Test.Test_Unit_Name2" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit2" name="Test.TestEntity.Test_Unit2" value="@Model.Test.TestEntity.Test_Unit2" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit3" style="color: #333">Test Unit #3</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit3" name="Test.Test_Unit_Name3" value="@Model.Test.Test_Unit_Name3" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit3" name="Test.TestEntity.Test_Unit3" value="@Model.Test.TestEntity.Test_Unit3" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit4" style="color: #333">Test Unit #4</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit4" name="Test.Test_Unit_Name4" value="@Model.Test.Test_Unit_Name4" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit4" name="Test.TestEntity.Test_Unit4" value="@Model.Test.TestEntity.Test_Unit4" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit5" style="color: #333">Test Unit #5</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit5" name="Test.Test_Unit_Name5" value="@Model.Test.Test_Unit_Name5" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit5" name="Test.TestEntity.Test_Unit5" value="@Model.Test.TestEntity.Test_Unit5" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit6" style="color: #333">Test Unit #6</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit6" name="Test.Test_Unit_Name6" value="@Model.Test.Test_Unit_Name6" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit6" name="Test.TestEntity.Test_Unit6" value="@Model.Test.TestEntity.Test_Unit6" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit7" style="color: #333">Test Unit #7</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit7" name="Test.Test_Unit_Name7" value="@Model.Test.Test_Unit_Name7" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit7" name="Test.TestEntity.Test_Unit7" value="@Model.Test.TestEntity.Test_Unit7" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit8" style="color: #333">Test Unit #8</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit8" name="Test.Test_Unit_Name8" value="@Model.Test.Test_Unit_Name8" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit8" name="Test.TestEntity.Test_Unit8" value="@Model.Test.TestEntity.Test_Unit8" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit9" style="color: #333">Test Unit #9</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit9" name="Test.Test_Unit_Name9" value="@Model.Test.Test_Unit_Name9" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit9" name="Test.TestEntity.Test_Unit9" value="@Model.Test.TestEntity.Test_Unit9" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit10" style="color: #333">Test Unit #10</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnit10" name="Test.Test_Unit_Name10" value="@Model.Test.Test_Unit_Name10" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit10" name="Test.TestEntity.Test_Unit10" value="@Model.Test.TestEntity.Test_Unit10" />
                                    </div>


                                    <div class="form-group">
                                        <label>
                                            @if (Model.Test.TestEntity.Status == true)
                                            {
                                                @:<input type="checkbox" name="Test.TestEntity.Status" value="false" checked />
                                                                                              
                                            }
                                        else
                                             {
                                                @:<input type="checkbox" name="Test.TestEntity.Status" value="true" />
                                               }
                                            &nbsp;&nbsp;&nbsp;&nbsp; Approved Status

                                        </label>
                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <a href="@Url.Action("Search","Test")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle</a>

                                </div>
                            </div>

                        </div>

                        <!-- /.box-body -->
                    </form>  
</div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>
