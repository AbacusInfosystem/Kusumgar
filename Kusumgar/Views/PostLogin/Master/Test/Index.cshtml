@model Kusumgar.Models.Master.TestViewModel
@{
    ViewBag.Title = "Test";
}


<script src="~/Scripts/Master/Event/test_event.js"></script>
<script src="~/Scripts/Master/Method/test_method.js"></script>
<script src="~/Scripts/Master/Validation/test_validation.js"></script>
<script src="~/Scripts/generic.autocomplete.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Test
           
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Test</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-primary">
                    <!-- form start -->

                    <form id="frmTest" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-4">

                                    <input type="hidden" id="hdfPageSize" name="" value="" />
                                    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                    <input type="hidden" id="hdfIsPagingRequired" name="" value="" />

                                    <input type="hidden" id="hdfTestId" name="Test.TestId" value="@Model.Test.TestId" />

                                    <div class="form-group">
                                        <label>Fabric Type</label>
                                        <select class="form-control" id="drpFabricTypeName" name="Test.FabricTypeName">
                                            <option value="">Select Fabric Type </option>


                                            @foreach (var item in Model.FabricType)
                                        {
                                            if (Model.Test.FabricTypeId == item.FabricTypeId)
                                            {
                                                <option value="@item.FabricTypeId" selected="selected">@item.FabricTypeName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.FabricTypeId">@item.FabricTypeName</option>
                                            }

                                        }

                                        </select>
                                     
                                    </div>

                                    <div class="form-group">
                                        <label for="txtTest">Test Name</label>
                                        <input type="text" class="form-control" id="txtTest" name="Test.TestName" value="@Model.Test.TestName" placeholder="Enter test name">
                                    </div>


                                    <div class="form-group">
                                        <label for="txtUnit1">Test Unit #1</label>
                                        <input type="text" class="form-control" id="txtTestUnit1" name="Test.TestUnitName1" value="@Model.Test.TestUnitName1" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit1" name="Test.TestUnit1" value="@Model.Test.TestUnit1" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit2">Test Unit #2</label>
                                        <input type="text" class="form-control" id="txtTestUnit2" name="Test.TestUnitName2" value="@Model.Test.TestUnitName2" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit2" name="Test.TestUnit2" value="@Model.Test.TestUnit2" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit3">Test Unit #3</label>
                                        <input type="text" class="form-control" id="txtTestUnit3" name="Test.TestUnitName3" value="@Model.Test.TestUnitName3" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit3" name="Test.TestUnit3" value="@Model.Test.TestUnit3" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit4">Test Unit #4</label>
                                        <input type="text" class="form-control" id="txtTestUnit4" name="Test.TestUnitName4" value="@Model.Test.TestUnitName4" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit4" name="Test.TestUnit4" value="@Model.Test.TestUnit4" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit5">Test Unit #5</label>
                                        <input type="text" class="form-control" id="txtTestUnit5" name="Test.TestUnitName5" value="@Model.Test.TestUnitName5" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit5" name="Test.TestUnit5" value="@Model.Test.TestUnit5" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit6">Test Unit #6</label>
                                        <input type="text" class="form-control" id="txtTestUnit6" name="Test.TestUnitName6" value="@Model.Test.TestUnitName6" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit6" name="Test.TestUnit6" value="@Model.Test.TestUnit6" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit7">Test Unit #7</label>
                                        <input type="text" class="form-control" id="txtTestUnit7" name="Test.TestUnitName7" value="@Model.Test.TestUnitName7" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit7" name="Test.TestUnit7" value="@Model.Test.TestUnit7" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit8">Test Unit #8</label>
                                        <input type="text" class="form-control" id="txtTestUnit8" name="Test.TestUnitName8" value="@Model.Test.TestUnitName8" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit8" name="Test.TestUnit8" value="@Model.Test.TestUnit8" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit9">Test Unit #9</label>
                                        <input type="text" class="form-control" id="txtTestUnit9" name="Test.TestUnitName9" value="@Model.Test.TestUnitName9" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit9" name="Test.TestUnit9" value="@Model.Test.TestUnit9" />
                                    </div>

                                    <div class="form-group">
                                        <label for="txtUnit10">Test Unit #10</label>
                                        <input type="text" class="form-control" id="txtTestUnit10" name="Test.TestUnitName10" value="@Model.Test.TestUnitName10" placeholder="Enter test unit" />
                                        <input type="hidden" id="hdfTestUnit10" name="Test.TestUnit10" value="@Model.Test.TestUnit10" />
                                    </div>


                                    <div class="form-group">
                                        <label>
                                            @if (Model.Test.Status == true)
                                            {
                                                @:<input type="checkbox" name="Test.Status" value="false" checked />
                                                                                              
                                            }
                                        else
                                             {
                                                @:<input type="checkbox" name="Test.Status" value="true" />
                                               }
                                            &nbsp;&nbsp;&nbsp;&nbsp; Approved Status

                                        </label>
                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">
                                <button type="submit" id="btnSave" class="btn btn-success">Save</button>
                                <a href="@Url.Action("Search","Test")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                            </div>

                        </div>

                        <!-- /.box-body -->
                    </form>  
</div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>
