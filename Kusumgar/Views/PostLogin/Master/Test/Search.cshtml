@{
    ViewBag.Title = "Test";
}

<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent!important;
    }
</style>

<script src="~/Scripts/Master/Event/test_search_event.js"></script>
<script src="~/Scripts/Master/Method/test_search_method.js"></script>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Test
           
            <small>Search</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Test Search</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Customer Search -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- form start -->

                    <form id="frmTestSearch" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <label>Fabric Type</label>
                                        <select class="form-control" id="drpFabricTypeName">
                                            <option value="">Select Fabric Type </option>


                                            @foreach (var item in Model.FabricType)
                                            {
                                                if (Model.Test.FabricTypeId == item.FabricTypeId)
                                                {
                                                    <option value="@item.FabricTypeId" selected="selected">@item.FabricTypeName</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.FabricTypeId">@item.FabricTypeName</option>
                                                }

                                            }

                                        </select>
                                        <input type="hidden" id="hdfFabricTypeId" name="Filter.FabricTypeName" value="@Model.Filter.FabricTypeName" />
                                    </div>

                                </div>

                            </div>

                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="btn-group pull-left">
                                            <button type="button" id="btnSearch" class="btn btn-success">Search</button>
                                            <a class="btn btn-primary" href="@Url.Action("Index","Test")" role="button">Create Test</a>
                                        </div>

                                    </div>
                                    <div class="col-md-6">

                                        <div class="btn-group pull-right">

                                            <input type="hidden" id="hdfPageSize" name="" value="" />
                                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                            <input type="hidden" id="hdfIsPagingRequired" name="" value="" />

                                            <input type="hidden" id="hdfTestId" name="EditMode.TestId" />
                                            <button type="button" class="btn btn-warning" id="btnEdit" style="display:none;">Edit Test</button>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->

                        </form>
</div>
            </div>
        </div>
        <!-- Customer Search Ends -->

        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped" id="tblSearchTest">
                            <tr>
                                <th style="width:50px;"></th>
                                <th>Fabric Type</th>
                                <th>Test Name</th>
                                <th>TestUnit1</th>
                                <th>TestUnit2</th>
                                <th>TestUnit3</th>
                                <th>TestUnit4</th>
                                <th>TestUnit5</th>
                                <th>TestUnit6</th>
                                <th>TestUnit7</th>
                                <th>TestUnit8</th>
                                <th>TestUnit9</th>
                                <th>TestUnit10</th>

                                <th style="width:100px;">Status</th>
                            </tr>
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <div class="pagination pagination-sm no-margin pull-right">
                            <ul>
                            
                        </ul>
                            </div>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
          
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col (left) -->
        </div>

       
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>
