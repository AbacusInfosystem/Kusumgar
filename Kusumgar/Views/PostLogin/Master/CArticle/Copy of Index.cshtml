</div>



<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        $('[name="r1"]').on('ifChanged', function (event) {
            var id = this.id;
            if ($("#" + id).prop('checked')) {
                if (id == 'rdChemical_Finish') {
                    $("#drpMechanical_Finish").attr('disabled', 'disabled');
                    $("#drpChemical_Finish").removeAttr('disabled', 'disabled');
                }
                else {
                    $("#drpMechanical_Finish").removeAttr('disabled', 'disabled');
                    $("#drpChemical_Finish").attr('disabled', 'disabled');
                }
            }
        });


        $('[name="r2"]').on('ifChanged', function (event) {
            var id = this.id;
            if ($("#" + id).prop('checked')) {
                if (id == 'rdYarn_Type') {
                    $("#drpYarn_type").removeAttr('disabled', 'disabled');
                    $("#txtC_Finish_width").attr('disabled', 'disabled');
                }
                else {
                    $("#drpYarn_type").attr('disabled', 'disabled');
                    $("#txtC_Finish_width").removeAttr('disabled', 'disabled');
                }
                   
            }
        });

    });



</script>