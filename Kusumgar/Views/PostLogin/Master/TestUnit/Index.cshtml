@model Kusumgar.Models.TestUnitViewModel


<script src="~/Scripts/Master/Event/test_unit_event.js"></script>
<script src="~/Scripts/Master/Method/test_unit_method.js"></script>
<script src="~/Scripts/Master/Validation/test_unit_validation.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Test Unit
           
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Test Unit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-primary">
                    <!-- form start -->

                    <form id="frmTestUnit" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-4">

                                    <div class="form-group">

                                        <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                        
                                        <input type="hidden" id="hdfTestUnitId" name="Test_Unit.TestUnitEntity.Test_Unit_Id" value="@Model.Test_Unit.TestUnitEntity.Test_Unit_Id" />
                                        <label for="txtTestUnitName" style="color: #333">Test Unit Name</label>
                                        <input type="text" class="form-control input-sm" id="txtTestUnitName" name="Test_Unit.TestUnitEntity.Test_Unit_Name" value="@Model.Test_Unit.TestUnitEntity.Test_Unit_Name" placeholder="Enter test unit name" />
                                    </div>

                                    <div class="form-group">
                                        <label>

                                            @if (Model.Test_Unit.TestUnitEntity.Status == true)
                                            {
                                                @:<input type="checkbox" name="Test_Unit.TestUnitEntity.Status" value="false" checked />
                                                
                                            }
                                            else
                                            
                                            {
                                                @:<input type="checkbox" name="Test_Unit.TestUnitEntity.Status" value="true" />

                                            }
                                            
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active Status

                                        </label>
                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <a href="@Url.Action("Search","TestUnit")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle</a>

                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        </form>

                 </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

