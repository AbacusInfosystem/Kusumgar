@model Kusumgar.Models.Master.TestUnitViewModel
@{
    ViewBag.Title = "Customer";
}

<script src="~/Scripts/Master/Event/test_unit_event.js"></script>
<script src="~/Scripts/Master/Method/test_unit_method.js"></script>
<script src="~/Scripts/Master/Validation/test_unit_validation.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Test Unit
           
            <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active">Test Unit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-primary">
                    <!-- form start -->

                    <form id="frmTestUnit" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-4">

                                    <div class="form-group">

                                        <input type="hidden" id="hdfPageSize" name="" value="" />
                                        <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                        <input type="hidden" id="hdfIsPagingRequired" name="" value="" />
                                       
                                        <input type="hidden" id="hdfTestUnitId" name="TestUnit.TestUnitId" value="@Model.TestUnit.TestUnitId" />
                                        <label for="txtTestUnitName">Test Unit Name</label>
                                        <input type="text" class="form-control" id="txtTestUnitName" name="TestUnit.TestUnitName" value="@Model.TestUnit.TestUnitName" placeholder="Enter test unit name" />
                                    </div>

                                    <div class="form-group">
                                        <label>

                                            @if(Model.TestUnit.Status== true)
                                            {
                                                @:<input type="checkbox" name="TestUnit.Status" value="false" checked />
                                                
                                            }
                                            else
                                            
                                            {
                                                @:<input type="checkbox" name="TestUnit.Status" value="true" />

                                            }
                                            
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active Status

                                        </label>
                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">
                                <button type="submit" id="btnSave" class="btn btn-success">Save</button>
                                <a href="@Url.Action("Search","TestUnit")" id="btnCancel" class="btn btn-warning" role="button">Cancle and Open Search</a>

                            </div>

                        </div>
                        <!-- /.box-body -->
                        </form>

                 </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>
