@model Kusumgar.Models.AttributeCodeViewModel
@using KusumgarBusinessEntities.Common;

@{
    ViewBag.Title = "Search";
}

<script src="~/Scripts/Master/Event/attribute_code_search_event.js"></script>
<script src="~/Scripts/Master/Method/attribute_code_search_method.js"></script>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    @{Html.RenderPartial("_ServerMessage");}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Attribute Codes Creation

            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> Attribute Codes Creation Search</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">

        <!-- Yarn Category Code Search -->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                        <!-- form start -->
                    <form id="frmAttributeCodeSearch" method="post">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <label for="drpAttributeName">Attribute Name</label>
                                        <select id="drpAttributeName" class="form-control">
                                            <option value="">Select Attribute Name</option>
                                            @foreach (var item in LookupInfo.GetAttributeNames())
                                            {
                                                if (Model.Attribute_Code.AttributeCodeEntity.Attribute_Id == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }
                                        </select>
                                        <input type="hidden" id="hdfAttributeId" name="Filter.Attribute_Id" value="@Model.Filter.Attribute_Id" />
                                    </div>

                                </div>
                            </div>

                            <div class="box-footer">

                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="btn-group pull-left">
                                            <button type="button" id="btnSearch" class="btn btn-success">Search</button>
                                            <a class="btn btn-primary" href="@Url.Action("Index","AttributeCode")" role="button">Create Attribute Code</a>
                                        </div>

                                    </div>
                                    <div class="col-md-6">

                                        <div class="btn-group pull-right">

                                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                           
                                            <input type="hidden" id="hdfAttributeCodeId" name="Edit_Mode.Attribute_Code_Id" />
                                            <button type="button" id="btnEdit" class="btn btn-warning" style="display:none;">Edit Attribute Code</button>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>
                       </form>
                    </div>
                </div>
            </div>

            <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped" id="tblSearchAttributeCode">
                            <tr>
                                <th style="width:50px;"></th>
                                <th>Name</th>
                                <th>AttributeName</th>
                                <th>Code</th>
                                <th style="width:100px;">Status</th>
                            </tr>
  
                        </table>

                    </div>

                    <div class="box-footer clearfix">
                        <div class="pagination pagination-sm no-margin pull-right">
                          <ul>

                          </ul>
                        </div>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>


                </div>
            </div>
        </div>
       
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        //Date range picker
        $('#dtpContractExpirationDate').datepicker();

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>



