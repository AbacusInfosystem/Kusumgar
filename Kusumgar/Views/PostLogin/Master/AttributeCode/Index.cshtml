@model Kusumgar.Models.AttributeCodeViewModel
@using KusumgarBusinessEntities.Common;

<script src="~/Scripts/Master/Event/attribute_code_event.js"></script>
<script src="~/Scripts/Master/Method/attribute_code_method.js"></script>
<script src="~/Scripts/Master/Validation/attribute_code_validation.js"></script>
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Attribute Codes Creation
          
             <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> Attribute Codes Creation</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>

                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <form id="frmAttributeCode" method="post">
                        <div class="box-body">
                            <br />
                            <div class="row">
                                <div class="col-md-4">

                                   
                                    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                                    
                                    <input type="hidden" id="hdfAttributeCodeId" name="Attribute_Code.Attribute_Code_Id" value="@Model.Attribute_Code.Attribute_Code_Id" />

                                    <div class="form-group">
                                        <label for="drpAttributeCode" style="color: #333">Attribute Code</label>
                                        <select id="drpAttributeCode" class="form-control input-sm" name="Attribute_Code.Attribute_Id">
                                            <option value="">Select AttributeName</option>
                                            @foreach (var item in LookupInfo.GetAttributeNames())
                                            {
                                                if (Model.Attribute_Code.Attribute_Id == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }
                                        </select>

                                    </div>

                                    <div class="form-group">
                                        <label for="txtYarnName" style="color: #333"> Name</label>
                                        <input type="text" class="form-control input-sm" id="txtYarnName" name="Attribute_Code.Attribute_Code_Name" value="@Model.Attribute_Code.Attribute_Code_Name" placeholder="Enter Yarn Name">
                                    </div>

                                    <div class="form-group">
                                        <label for="txtYarnCode" style="color: #333"> Code</label>
                                        <input type="text" class="form-control input-sm" id="txtYarnCode" name="Attribute_Code.Code" value="@Model.Attribute_Code.Code" placeholder="Enter Yarn Code">
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            @if (Model.Attribute_Code.Status == true)
                                        {
                                        @:<input type="checkbox" name="Attribute_Code.Status" value="false" checked />
                                                                                               }
                                        else
                                        {
                                        @:<input type="checkbox" name="Attribute_Code.Status" value="true" />
                                               }
                                            &nbsp;&nbsp;&nbsp;&nbsp; Approved Status

                                        </label>
                                    </div>

                                </div>

                                <div class="col-md-8">

                                    <table class="table table-striped" id="tblAttributeCode" style="display:none;">
                                        <tr>
                                            <th>Name</th>
                                            <th>AttributeName</th>
                                            <th> Code</th>
                                            <th style="width:100px;"> Status</th>
                                        </tr>

                                    </table>
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <a href="@Url.Action("Search", "AttributeCode")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancle</a>

                                </div>
                            </div>

                        </div>
                        </form>

                        <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">

    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });
    });
</script>