@{
    ViewBag.Title = "Search Quality";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Quality Creation
            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Master</li>
            <li class="active"> Quality Creation Search</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Quality Creation Search -->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <!-- form start -->
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label for="drpYarnType">Yarn Type</label>
                                    <select class="form-control" id="drpYarnType">
                                        <option>-Select Yarn type-</option>
                                        <option>Nylon</option>
                                        <option>Polyster texturised</option>
                                        <option>Air texturised Nylon</option>
                                        <option>Viscose Staple</option>
                                        <option>Polyster Cotton Mix</option>
                                        <option>Meta aramide</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="btn-group pull-left">
                                        <button type="submit" id="btnSearch" class="btn btn-success">Search</button>
                                        <a class="btn btn-primary" href="@Url.Action("Index","QualityCreation")" role="button">Create Quality Creation</a>
                                    </div>

                                </div>
                                <div class="col-md-6">

                                    <div class="btn-group pull-right">
                                        <button type="button" class="btn btn-warning">Edit Quality Creation</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-striped" style="width:1000px;max-width:1000px">
                            <tr>
                                <th style="width:50px;"></th>
                                <th style="width:400px;">Quality No</th>
                                <th style="width:200px;">Yarn Type</th>
                                <th style="width:200px;">Minimum Order Size</th>
                                <th style="width:200px;">Ideal Roll Length</th>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" checked />
                                </td>
                                <td>11000</td>
                                <td>Nylon</td>
                                <td>70</td>
                                <td>70</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" />
                                </td>
                                <td>11999</td>
                                <td>Nylon</td>
                                <td>70</td>
                                <td>70</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" />
                                </td>
                                <td>12000</td>
                                <td>Polyster texturised</td>
                                <td>70</td>
                                <td>70</td>
                            </tr>

                            <tr>
                                <td>
                                    <input type="radio" name="r1" />
                                </td>
                                <td>12999</td>
                                <td>Polyster texturised</td>
                                <td>70</td>
                                <td>70</td>
                            </tr>
                        </table>

                    </div>

                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>

                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">
    $(document).ready(function () {

        $('input').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

        $("#btnSearch").click(function () {
            $("#divSearchGridOverlay").show();
        });

        $("#divSearchGridOverlay").hide();
    });
</script>