@model Kusumgar.Models.IndustrialViewModel
@using KusumgarBusinessEntities.Common

<script src="/Scripts/Master/Event/industrial_event.js"></script>
<script src="/Scripts/Master/Method/industrial_method.js"></script>
<script src="/Scripts/Master/Validation/industrial_validation.js"></script>
<link rel="stylesheet" href="~/Content/jquery-ui.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Industrial

            <small>Master</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Masters</li>
            <li class="active">Industrial</li>
        </ol>
    </section>
    
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" id="tabIndustrialMaster" data-toggle="tab">Industrial Master</a></li>
                        <li><a href="#tab_2" id="tabIndustrialVendor" data-toggle="tab">Industrial Vendor</a></li>
                        <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-info"></i></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <br />
                            <form id="frmIndustrial">
                                <div class="row">
                                    <div class="col-md-4">

                                        <input type="hidden" id="hdnIndustrial_Id" value="@Model.Industrial.Industrial_Entity.Industrial_Master_Id">

                                        <div class="form-group">
                                            <label for="drpIndCatName" style="color: #333">Industrial Category Name</label>
                                            <select class="form-control input-sm" id="drpIndCatName" name="Industrial.Industrial_Entity.Industrial_Category_Name">
                                                <option value="" selected="selected">--Select--</option>
                                                @foreach (var item in Model.Industrial_Categories)
                                                {
                                                    if(Model.Industrial.Industrial_Entity.Industrial_Category_Id == item.Industrial_Category_Entity.Industrial_Category_Id)
                                                    {
                                                        <option value="@item.Industrial_Category_Entity.Industrial_Category_Id" selected="selected">@item.Industrial_Category_Entity.Industrial_Category_Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Industrial_Category_Entity.Industrial_Category_Id">@item.Industrial_Category_Entity.Industrial_Category_Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="drpIndGroupName" style="color: #333">Industrial Group Name</label>
                                            <select class="form-control input-sm" id="drpIndGroupName" name="Industrial.Industrial_Entity.Industrial_Group_Name">
                                                <option value="" selected="selected">--Select--</option>
                                                @foreach (var item in Model.Industrial_Groups)
                                                {
                                                    if (Model.Industrial.Industrial_Entity.Industrial_Group_Id == item.Industrial_Group_Entity.Industrial_Group_Id)
                                                    {
                                                        <option value="@item.Industrial_Group_Entity.Industrial_Group_Id" selected="selected">@item.Industrial_Group_Entity.Industrial_Group_Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Industrial_Group_Entity.Industrial_Group_Id">@item.Industrial_Group_Entity.Industrial_Group_Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="txtSubGroupName" style="color: #333">Industrial Sub-Group Name</label>
                                            <input type="text" class="form-control input-sm" name="Industrial.Industrial_Entity.Industrial_SubGrp_Name" id="txtSubGroupName" placeholder="Enter Sub-Group Name" value="@Model.Industrial.Industrial_Entity.Industrial_SubGrp_Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="txtSize" style="color: #333">Size</label>
                                            <input type="text" class="form-control input-sm" name="Industrial.Industrial_Entity.Size" id="txtSize" placeholder="Enter Size" value="@Model.Industrial.Industrial_Entity.Size">
                                        </div>
                                        <div class="form-group">
                                            <label for="txtCOD" style="color: #333">COD</label>
                                            <input type="text" class="form-control input-sm" name="Industrial.Industrial_Entity.COD" id="txtCOD" placeholder="Enter COD" value="@Model.Industrial.Industrial_Entity.COD">
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="btn-group">
                                        <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                        <a href="@Url.Action("Search", "Industrial")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane" id="tab_2">
                            <br/>
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="hidden" id="hdnIndustrial_Vendor_Id" value="@Model.Industrial_Vendor.Industrial_Vendor_Entity.Industrial_Vendor_Id">
                                    <div class="form-group">
                                        <label for="txtVendorName" style="color: #333">Vendor Name</label>
                                        <div class="auto-complete">
                                            <input type="text" class="form-control input-sm" name="Industrial_Vendor.Vendor_Name" id="txtVendorName" placeholder="Enter Vendor Name" value="@Model.Industrial_Vendor.Vendor_Name">
                                            <input type="hidden" id="hdnVendor_Id" value="@Model.Industrial_Vendor.Industrial_Vendor_Entity.Vendor_Id">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="drpPriorityOrder" style="color: #333">Priority Order</label>
                                        <select class="form-control input-sm" id="drpPriorityOrder" name="Industrial_Vendor.Industrial_Vendor_Entity.Priority_Order">
                                            <option value="" selected="selected">--Select--</option>
                                            @foreach (var item in LookupInfo.Get_Priority_Orders())
                                            {
                                                if (Model.Industrial_Vendor.Industrial_Vendor_Entity.Priority_Order == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="box-body table-responsive no-padding">
                                        <table class="table table-striped" id="tblIndVenGrid">
                                            <tr>
                                                <th>Vendor Name</th>
                                                <th>Priority Order</th>
                                                <th></th>
                                            </tr>
                                            @foreach (var item in Model.Industrial_Vendors)
                                            {
                                                <tr id="tr_ivendor_@item.Industrial_Vendor_Entity.Industrial_Vendor_Id">
                                                    <td>@item.Vendor_Name</td>
                                                    <td>@item.Industrial_Vendor_Entity.Priority_Order</td>
                                                    <td>
                                                        <div class="btn-group pull-right">
                                                            <button type="button" id="btnRemove" class="btn btn-danger btn-sm" onclick="RemoveVendor(@item.Industrial_Vendor_Entity.Industrial_Vendor_Id)"><i class='fa fa-times'></i></button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="button" id="btnSaveIV" class="btn btn-success btn-sm">Save Industrial Vendor</button>
                                    <a href="@Url.Action("Search", "Industrial")" id="btnCancel" class="btn btn-warning btn-sm" role="button">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- nav-tabs-custom -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section>
</div>
<!-- /.content-wrapper -->
