@model Kusumgar.Models.IndustrialViewModel
@using KusumgarBusinessEntities.Common
@{
    ViewBag.Title = "Search";
}
<script src="/Scripts/Master/Event/industrial_search_event.js"></script>
<script src="/Scripts/Master/Method/industrial_search_method.js"></script>
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>
<input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Industrial

            <small>Search</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li>Masters</li>
            <li class="active">Industrial Search</li>
        </ol>
    </section>
    <form id="frmSearch_ind">
        <input type="hidden" id="hdnIndustrial_Id" name="Industrial_Master_Id">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <!-- form start -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="drpIndCatName">Industrial Category Name</label>
                                        <select class="form-control" id="drpIndCatName" name="Industrial.Industrial_Entity.Industrial_Category_Name">
                                            <option value="" selected="selected">--Select--</option>
                                            @foreach (var item in Model.Industrial_Categories)
                                            {
                                                if (Model.Industrial.Industrial_Entity.Industrial_Category_Id == item.Industrial_Category_Entity.Industrial_Category_Id)
                                                {
                                                    <option value="@item.Industrial_Category_Entity.Industrial_Category_Id" selected="selected">@item.Industrial_Category_Entity.Industrial_Category_Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Industrial_Category_Entity.Industrial_Category_Id">@item.Industrial_Category_Entity.Industrial_Category_Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="drpIndGroupName" style="color: #333">Industrial Group Name</label>
                                        <select class="form-control" id="drpIndGroupName" name="Industrial.Industrial_Entity.Industrial_Group_Name">
                                            <option value="" selected="selected">--Select--</option>
                                            @foreach (var item in Model.Industrial_Groups)
                                            {
                                                if (Model.Industrial.Industrial_Entity.Industrial_Group_Id == item.Industrial_Group_Entity.Industrial_Group_Id)
                                                {
                                                    <option value="@item.Industrial_Group_Entity.Industrial_Group_Id" selected="selected">@item.Industrial_Group_Entity.Industrial_Group_Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Industrial_Group_Entity.Industrial_Group_Id">@item.Industrial_Group_Entity.Industrial_Group_Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group pull-left">
                                            <button type="button" id="btnSearch" class="btn btn-success">Search</button>
                                            <a class="btn btn-primary" href="@Url.Action("Index","Industrial")" role="button">Industrial Master Creation </a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" style="display:none;" class="btn btn-warning">Edit Industrial Master</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /.content -->
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblIndGrid">
                                <tr id="subhead">
                                    <th style="width:50px;"></th>
                                    <th style="width:200px;">Industrial Category Name</th>
                                    <th style="width:200px;">Industrial Group Name</th>
                                    <th style="width:200px;">Industrial Sub-Group Name</th>
                                    <th style="width:100px;">Size</th>
                                    <th style="width:100px;">COD</th>
                                </tr>
                            </table>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="pagination pagination-sm no-margin pull-right">
                                <ul></ul>
                            </div>
                            <div id="divSearchGridOverlay" class="overlay">
                                    <i class="fa fa-refresh fa-spin"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>
<!-- /.content-wrapper -->
