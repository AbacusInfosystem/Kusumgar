@model Kusumgar.Models.ContactViewModel
@using KusumgarBusinessEntities.Common
@{
    Layout = null;
}
<form id="frmPrintable_Contact">
    <input type="hidden" id="hdfContact_Id" name="contact.Contact_Id" value="@Model.Contact.Contact_Id">
    <!-- Main content -->
    <div id="DvPrint" >
        <div class="box box-primary">
            <div class="box-header">

                <div class="box-title">
                    Contact Details
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    @* hidden Fields *@
                    <input type="hidden" id="hdnContact_Id" name="" value="@Model.Contact.Contact_Id">
                    <br />
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="color: #333">Customer name : </label>@Model.Contact.Customer_Name
                                </div>
                                <div class="form-group">
                                    <label style="color: #333">Contact name : </label> @Model.Contact.Contact_Name
                                </div>
                                <div class="form-group">
                                    <label style="color: #333">Designation : </label> @Model.Contact.Designation
                                </div>
                                <div class="form-group">
                                    <label style="color: #333">Personal email : </label> @Model.Contact.Personal_Email
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="color: #333">Office address : </label>@Model.Contact.Office_Address
                                </div>
                                <div class="form-group">
                                    <label style="color: #333">Official email Id : </label>@Model.Contact.Official_Email
                                </div>

                                <div class="form-group">
                                    <label style="color: #333">Landline 1 : </label>@Model.Contact.Office_Landline1
                                </div>

                                <div class="form-group">
                                    <label style="color: #333">Landline 2 : </label>@Model.Contact.Office_Landline2
                                </div>

                                <div class="form-group">
                                    <label style="color: #333">Mobile 1 : </label>@Model.Contact.Mobile1
                                </div>

                                <div class="form-group">
                                    <label style="color: #333">Mobile 2 : </label>@Model.Contact.Mobile2
                                </div>

                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="color: #333">DMU status influence : </label>@Model.Contact.DMU_Status_Influence_Str
                                </div>
                                <div class="form-group">
                                    <label style="color: #333">DMU status role : </label>@Model.Contact.DMU_Status_Role_Str
                                </div>
                            </div>
                        </div>

                        <div class="box-header">

                            <div class="box-title">
                                Custom Field Details
                            </div>
                        </div>

                        <div class="row">
                            @foreach (var item in Model.Contact.Contact_Custom_Fields_List)
                            {
                                <div class="col-md-4">
                                    <label>@item.Field_Name : </label> @item.Field_Value
                                </div>
                            }
                        </div>
                        </div>
                    </div><!-- /.col -->
                </div>
            </div>
        </div>

    <!-- /.content -->
</form>
